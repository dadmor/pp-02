---
// src/components/Logo.astro
export interface Props {
  showText?: boolean;
  size?: "s" | "m" | "l";
  class?: string;
}

const { showText = true, size = "m", class: className = "" } = Astro.props;

const sizes = {
  s: { logo: "w-8 h-8", text: "text-sm" },
  m: { logo: "w-10 h-10", text: "text-base" },
  l: { logo: "w-12 h-12", text: "text-lg" },
};

const s = sizes[size];
---

<a href="/" class={`flex items-center gap-2.5 ${className}`}>
  <img
    src="/logo.svg"
    alt="Logo"
    class={s.logo}
    width="40"
    height="40"
  />
  {showText && (
    <div class={`flex flex-col leading-tight ${s.text}`}>
      <span class="font-medium">Profesjonalna</span>
      <span class="font-medium">Psychoterapia</span>
    </div>
  )}
</a>