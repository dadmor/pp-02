---
// src/components/templates/IntegrativeTemplate.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

export interface Props {
  data: any;
}

const { data } = Astro.props;
const { therapist } = data;
const sections = therapist.sections;

const navigation = [
  { 
    label: "Filozofia", 
    sublabel: "Philosophy" 
  },
  { 
    label: "Metoda", 
    sublabel: "Method" 
  },
  { 
    label: "O mnie", 
    sublabel: "About" 
  },
  { 
    label: "Kontakt", 
    sublabel: "Contact" 
  }
];

const layoutProps = {
  title: `${therapist.name} - Psychoterapeuta Integracyjny Warszawa | Profesjonalna Psychoterapia`,
  description: sections.hero?.intro || `${therapist.name} - ${therapist.title}. Doświadczenie: ${therapist.exp} lat. Specjalizacje: ${therapist.spec.join(', ')}. Lokalizacja: ${therapist.loc}.`,
  canonical: `https://profesjonalna-psychoterapia.pl/terapeuta/${therapist.slug}`,
  image: `/images/therapists/${therapist.img}.webp`,
  showHeader: false,
  headerVariant: 'custom' as const
};
---

<BaseLayout {...layoutProps}>
  <!-- Custom styles -->
  <style slot="head">
    @import url('https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:wght@300;400;500;600&display=swap');
    
    body {
      font-family: 'Inter', -apple-system, sans-serif;
      font-weight: 400;
      background-color: white;
      color: #171717;
    }
    
    .font-serif {
      font-family: 'Instrument Serif', Georgia, serif;
    }

    html {
      scroll-behavior: smooth;
    }

    ::selection {
      background: #f5f5f5;
      color: #171717;
    }
  </style>

  <!-- Subtle Grid Pattern -->
  <div slot="background" class="fixed inset-0 opacity-[0.015] pointer-events-none">
    <svg width="100%" height="100%">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <!-- Navigation -->
  <nav slot="header" class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-8">
      <div class="flex justify-between items-center h-24">
        <!-- Logo -->
        <div>
          <h1 class="text-sm tracking-[0.2em] font-medium">{therapist.name.toUpperCase()}</h1>
          <p class="text-[10px] tracking-[0.15em] text-neutral-400 mt-1">{sections.hero?.tagline || "Psychoterapia Integracyjna"}</p>
        </div>

        <!-- Menu -->
        <div class="hidden md:flex items-center gap-12">
          {navigation.map((item) => (
            <a href="#" class="group text-center">
              <span class="block text-sm text-neutral-700 group-hover:text-neutral-900 transition-colors">
                {item.label}
              </span>
              <span class="block text-[10px] text-neutral-400 mt-0.5">
                {item.sublabel}
              </span>
            </a>
          ))}
        </div>

        <!-- Contact -->
        <div class="text-right">
          <p class="text-sm text-neutral-700">{sections.contact?.phone || "+48 123 456 789"}</p>
          <p class="text-[10px] text-neutral-400">Pon-Pt 9:00-19:00</p>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  {sections.hero && (
    <section class="min-h-screen flex items-center px-8 pt-24">
      <div class="max-w-7xl mx-auto w-full">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-8">
            <h2 class="font-serif text-6xl lg:text-7xl xl:text-8xl leading-[0.9] mb-8" set:html={sections.hero.headline} />
            
            <p class="text-xl lg:text-2xl text-neutral-600 max-w-2xl mb-12 leading-relaxed">
              {sections.hero.intro}
            </p>

            <div class="flex flex-wrap gap-4 mb-16">
              <a href="#contact" class="px-8 py-4 bg-neutral-900 text-white hover:bg-neutral-800 transition-colors">
                Umów konsultację
              </a>
              <a href="#philosophy" class="px-8 py-4 border border-neutral-300 hover:border-neutral-900 transition-colors">
                Dowiedz się więcej
              </a>
            </div>

            {sections.hero.stats && (
              <div class="flex gap-16">
                {sections.hero.stats.map((stat: any) => (
                  <div>
                    <p class="text-3xl font-light">{stat.value}</p>
                    <p class="text-sm text-neutral-500">{stat.label}</p>
                  </div>
                ))}
              </div>
            )}
            
            <div class="mt-24">
              <a href="/#find" class="text-sm text-neutral-400 hover:text-neutral-600 transition-colors inline-flex items-center gap-2">
                ← Zobacz innych terapeutów
              </a>
            </div>
          </div>

          <div class="col-span-12 lg:col-span-4">
            <div class="relative">
              <img 
                src={`/images/therapists/${therapist.img}.webp`}
                alt={therapist.name}
                class="w-full rounded-sm"
                loading="lazy"
              />
              <div class="absolute -bottom-4 -right-4 bg-neutral-100 p-6">
                <p class="text-xs text-neutral-500">Certyfikowany psychoterapeuta</p>
                <p class="text-sm font-medium">PTP nr {therapist.id || '1234'}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Philosophy -->
  {sections.philosophy && (
    <section id="philosophy" class="py-24 px-8 bg-neutral-50">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-16">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">FILOZOFIA</p>
          </div>
          <div class="col-span-12 lg:col-span-8">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8 leading-tight" set:html={sections.philosophy.title} />
            <p class="text-lg text-neutral-600 leading-relaxed">
              {sections.philosophy.intro}
            </p>
          </div>
        </div>

        {sections.philosophy.approaches && (
          <div class="grid grid-cols-12 gap-8">
            {sections.philosophy.approaches.map((approach: any) => (
              <div class="col-span-12 md:col-span-6 lg:col-span-3">
                <div class="h-full border-t border-neutral-300 pt-6">
                  <p class="text-2xl text-neutral-300 mb-4">{approach.number}</p>
                  <h4 class="text-lg font-medium mb-3">{approach.title}</h4>
                  <p class="text-sm text-neutral-600 leading-relaxed">
                    {approach.description}
                  </p>
                </div>
              </div>
            ))}
          </div>
        )}

        {sections.philosophy.quote && (
          <div class="mt-24 text-center">
            <blockquote class="font-serif text-3xl text-neutral-700 italic" set:html={sections.philosophy.quote.text} />
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Method/Services -->
  {sections.services && (
    <section id="method" class="py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-16">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">METODA PRACY</p>
          </div>
          <div class="col-span-12 lg:col-span-6">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">
              Terapia dopasowana do Ciebie
            </h3>
            <p class="text-lg text-neutral-600">
              Oferuję różne formy wsparcia, zawsze w atmosferze 
              bezpieczeństwa i pełnej akceptacji.
            </p>
          </div>
        </div>

        <div class="grid grid-cols-12 gap-8">
          {sections.services.map((service: any) => (
            <div class="col-span-12 lg:col-span-4">
              <div class="h-full bg-neutral-50 p-8">
                <h4 class="text-xl font-medium mb-4">{service.title}</h4>
                <p class="text-sm text-neutral-600 mb-6 leading-relaxed">
                  {service.description}
                </p>
                <div class="pt-6 border-t border-neutral-200">
                  <div class="flex justify-between text-sm">
                    <span class="text-neutral-500">Czas trwania</span>
                    <span>{service.duration}</span>
                  </div>
                  <div class="flex justify-between text-sm mt-2">
                    <span class="text-neutral-500">Inwestycja</span>
                    <span>{service.price}</span>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {sections.process && (
          <div class="mt-24 max-w-4xl mx-auto">
            <h4 class="font-serif text-2xl mb-8 text-center">{sections.process.title}</h4>
            
            <div class="space-y-8">
              {sections.process.steps.map((step: any) => (
                <div class="flex gap-8">
                  <span class="text-4xl font-light text-neutral-200">{step.number}</span>
                  <div>
                    <h5 class="font-medium mb-2">{step.title}</h5>
                    <p class="text-sm text-neutral-600">
                      {step.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- About -->
  {sections.about && (
    <section id="about" class="py-24 px-8 bg-neutral-50">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">O MNIE</p>
          </div>
          
          <div class="col-span-12 lg:col-span-5">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">{sections.about.title || therapist.name}</h3>
            
            <div class="prose prose-neutral">
              {sections.about.bio.map((paragraph: string) => (
                <p class="text-neutral-600 mb-6">{paragraph}</p>
              ))}
            </div>
            
            {therapist.spec && (
              <div class="mt-8">
                <p class="text-xs tracking-[0.2em] text-neutral-500 mb-4">SPECJALIZACJE</p>
                <div class="flex flex-wrap gap-2">
                  {therapist.spec.map((spec: string) => (
                    <span class="text-xs bg-white px-3 py-1 rounded-full text-gray-600 border border-gray-200">
                      {spec}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
          
          <div class="col-span-12 lg:col-span-4 lg:col-start-9">
            <img 
              src={`/images/therapists/${therapist.img}.webp`}
              alt={therapist.name}
              class="w-full mb-8"
              loading="lazy"
            />
            
            {sections.about.credentials && (
              <div class="space-y-4">
                <div>
                  <p class="text-xs text-neutral-500 mb-1">Wykształcenie</p>
                  <p class="text-sm" set:html={sections.about.credentials.education}></p>
                </div>
                
                <div>
                  <p class="text-xs text-neutral-500 mb-1">Certyfikaty</p>
                  <p class="text-sm" set:html={sections.about.credentials.certificates}></p>
                </div>
                
                <div>
                  <p class="text-xs text-neutral-500 mb-1">Superwizja</p>
                  <p class="text-sm">{sections.about.credentials.supervision}</p>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Space -->
  {sections.space && (
    <section class="py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-16">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">PRZESTRZEŃ</p>
          </div>
          <div class="col-span-12 lg:col-span-8">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">
              {sections.space.title}
            </h3>
            <p class="text-lg text-neutral-600">
              {sections.space.description}
            </p>
          </div>
        </div>

        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-8">
            <img 
              src={sections.space?.image || "/images/office/przykladowy-gabinet-1.webp"}
              alt="Gabinet psychoterapeutyczny"
              class="w-full"
              loading="lazy"
            />
          </div>
          <div class="col-span-12 lg:col-span-4">
            <div class="h-full flex flex-col justify-center">
              <div class="bg-neutral-50 p-8">
                <h4 class="font-medium mb-4">Lokalizacja</h4>
                <address class="not-italic text-sm text-neutral-600 space-y-2">
                  <p>{therapist.loc}</p>
                  <p>Warszawa</p>
                  <p>{sections.space.address?.metro || "Metro: Centrum"}</p>
                </address>
                
                <div class="mt-6 pt-6 border-t border-neutral-200">
                  <p class="text-sm text-neutral-600">
                    Dogodny dojazd komunikacją miejską.<br/>
                    Możliwość parkowania w okolicy.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Contact -->
  {sections.contact && (
    <section id="contact" class="py-24 px-8 bg-neutral-900 text-white">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">KONTAKT</p>
          </div>
          
          <div class="col-span-12 lg:col-span-5">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">
              {sections.contact.title}
            </h3>
            
            <p class="text-lg text-neutral-300 mb-12">
              {sections.contact.subtitle}
            </p>
            
            <div class="space-y-6">
              <div>
                <p class="text-sm text-neutral-500 mb-2">Telefon</p>
                <a href={`tel:${sections.contact.phone}`} class="text-2xl hover:text-neutral-300 transition-colors">
                  {sections.contact.phone}
                </a>
              </div>
              
              <div>
                <p class="text-sm text-neutral-500 mb-2">Email</p>
                <a href={`mailto:${sections.contact.email}`} class="text-lg hover:text-neutral-300 transition-colors">
                  {sections.contact.email}
                </a>
              </div>
              
              <div>
                <p class="text-sm text-neutral-500 mb-2">Godziny przyjęć</p>
                <p>{sections.contact.hours.weekdays}</p>
                <p>{sections.contact.hours.saturday}</p>
              </div>
              
              <div class="mt-8 p-4 bg-neutral-800 rounded">
                <p class="text-sm">
                  {therapist.avail ? (
                    <span class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      Obecnie przyjmuję nowych pacjentów
                    </span>
                  ) : (
                    <span class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-orange-500 rounded-full"></span>
                      Lista oczekujących (średni czas: 2-3 tygodnie)
                    </span>
                  )}
                </p>
              </div>
            </div>
          </div>
          
          <div class="col-span-12 lg:col-span-4 lg:col-start-9">
            <div class="bg-white text-neutral-900 p-8">
              <h4 class="font-medium mb-6">Napisz do mnie</h4>
              
              <form class="space-y-4">
                <div>
                  <label class="text-xs text-neutral-500 block mb-2">Imię i nazwisko</label>
                  <input type="text" class="w-full px-0 py-2 border-0 border-b border-neutral-300 focus:outline-none focus:border-neutral-900" />
                </div>
                
                <div>
                  <label class="text-xs text-neutral-500 block mb-2">Email</label>
                  <input type="email" class="w-full px-0 py-2 border-0 border-b border-neutral-300 focus:outline-none focus:border-neutral-900" />
                </div>
                
                <div>
                  <label class="text-xs text-neutral-500 block mb-2">Wiadomość</label>
                  <textarea rows="4" class="w-full px-0 py-2 border-0 border-b border-neutral-300 focus:outline-none focus:border-neutral-900 resize-none"></textarea>
                </div>
                
                <button type="submit" class="w-full py-3 bg-neutral-900 text-white hover:bg-neutral-800 transition-colors">
                  Wyślij
                </button>
              </form>
              
              <p class="text-xs text-neutral-500 mt-6 text-center">
                {sections.contact.responseTime || "Odpowiadam w ciągu 24 godzin"}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <script slot="scripts">
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          const offset = 100;
          const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      });
    });
  </script>
</BaseLayout>