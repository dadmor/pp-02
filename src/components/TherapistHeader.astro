---
// src/components/TherapistHeader.astro
export interface Props {
  therapist: any;
}

const { therapist } = Astro.props;
const sections = therapist.sections;
---

<header class="fixed top-0 left-0 right-0 z-40 bg-white/90 backdrop-blur-md">
  <div class="max-w-screen-xl mx-auto px-6 py-6">
    <div class="grid grid-cols-12 gap-6">
      <div class="col-span-3">
        <a href="/" class="text-sm tracking-[0.2em] text-neutral-900 hover:text-neutral-600 transition-colors font-light">
          {therapist.name.toUpperCase()}
        </a>
      </div>
      <nav class="col-span-9 flex justify-end items-center gap-12">
        {sections.philosophy && (
          <a href="#philosophy" class="text-sm tracking-[0.05em] hover:text-neutral-600 transition-colors font-light">
            Filozofia
          </a>
        )}
        {sections.services && (
          <a href="#practice" class="text-sm tracking-[0.05em] hover:text-neutral-600 transition-colors font-light">
            Praktyka
          </a>
        )}
        {sections.about && (
          <a href="#about" class="text-sm tracking-[0.05em] hover:text-neutral-600 transition-colors font-light">
            O mnie
          </a>
        )}
        {sections.contact && (
          <a href="#contact" class="text-sm tracking-[0.05em] hover:text-neutral-600 transition-colors font-light">
            Kontakt
          </a>
        )}
      </nav>
    </div>
  </div>
</header>