---
import '../../styles/global.css';
import Logo from '../Logo.astro';
import SEO from '../SEO.astro';

export interface Props {
  therapist: any;
}

const { therapist } = Astro.props;
const sections = therapist.sections;

// SEO props
const seoProps = {
  title: `${therapist.name} - Psychoterapeuta Warszawa | Profesjonalna Psychoterapia`,
  description: sections.hero?.intro || `${therapist.name} - ${therapist.title}. Doświadczenie: ${therapist.exp} lat. Specjalizacje: ${therapist.spec.join(', ')}. Lokalizacja: ${therapist.loc}.`,
  canonical: `https://profesjonalna-psychoterapia.pl/terapeuta/${therapist.slug}`,
  image: `/images/therapists/${therapist.img}.webp`
};

const menuItems = [
  { 
    href: "#essence", 
    label: "Istota",
    subtitle: "Philosophy" 
  },
  { 
    href: "#journey", 
    label: "Droga",
    subtitle: "Process" 
  },
  { 
    href: "#space", 
    label: "Przestrzeń",
    subtitle: "Practice" 
  },
  { 
    href: "#wisdom", 
    label: "Mądrość",
    subtitle: "Insights" 
  },
  { 
    href: "#connection", 
    label: "Połączenie",
    subtitle: "Contact" 
  }
];
---

<!doctype html>
<html lang="pl">
  <head>
    <SEO {...seoProps} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,700;1,400;1,500&family=Karla:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-neutral-50 text-neutral-900 selection:bg-rose-100 selection:text-rose-900">
    
    <!-- Artistic Grid Pattern -->
    <div class="fixed inset-0 pointer-events-none opacity-[0.02] z-0">
      <svg width="100%" height="100%">
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="1"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>

    <!-- Navigation - Museum Style -->
    <nav class="fixed top-0 w-full z-50 bg-gradient-to-b from-neutral-50 via-neutral-50/95 to-transparent">
      <div class="max-w-screen-2xl mx-auto px-8 lg:px-16">
        <div class="flex justify-between items-start py-8">
          <!-- Logo -->
          <div>
            <h1 class="text-2xl tracking-[0.3em] font-light">{therapist.name.toUpperCase()}</h1>
            <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">PSYCHOTHERAPIST • WARSAW</p>
          </div>
          
          <!-- Menu -->
          <div class="hidden lg:flex gap-12">
            {menuItems.map((item) => (
              <a href={item.href} class="group text-center">
                <span class="block text-sm tracking-wider text-neutral-700 group-hover:text-rose-700 transition-colors">
                  {item.label}
                </span>
                <span class="block text-xs tracking-wider text-neutral-400 mt-1">
                  {item.subtitle}
                </span>
              </a>
            ))}
          </div>

          <!-- Language Toggle -->
          <div class="flex items-center gap-2 text-xs tracking-wider">
            <button class="text-neutral-900">PL</button>
            <span class="text-neutral-300">/</span>
            <button class="text-neutral-400 hover:text-neutral-900 transition-colors">EN</button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero - Gallery Opening Style -->
    {sections.hero && (
      <section class="min-h-screen flex items-center px-8 lg:px-16 relative">
        <div class="max-w-screen-2xl mx-auto w-full pt-32">
          <div class="grid grid-cols-12 gap-8">
            <div class="col-span-12 lg:col-span-7">
              <!-- Exhibition Title Style -->
              <div class="mb-12">
                <p class="text-rose-700 tracking-[0.3em] text-xs mb-4">{sections.hero.tagline}</p>
                <h2 class="font-serif text-7xl lg:text-8xl xl:text-9xl leading-[0.85] tracking-tight" set:html={sections.hero.headline} />
              </div>

              <!-- Curator's Note -->
              <div class="max-w-xl">
                <p class="text-lg leading-relaxed text-neutral-600 mb-8">
                  {sections.hero.intro}
                </p>
                
                <!-- Gallery Hours -->
                {sections.hero.stats && (
                  <div class="flex gap-16 text-sm">
                    {sections.hero.stats.map((stat: any) => (
                      <div>
                        <p class="text-neutral-400 tracking-wider mb-1">{stat.label}</p>
                        <p class="text-2xl font-light">{stat.value}</p>
                      </div>
                    ))}
                  </div>
                )}
              </div>

              <!-- Opening Hours CTA -->
              <div class="mt-16 flex gap-6">
                <a href="#connection" class="group relative overflow-hidden border border-neutral-900 px-8 py-4">
                  <span class="relative z-10 text-sm tracking-wider">UMÓW WIZYTĘ</span>
                  <div class="absolute inset-0 bg-neutral-900 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500"></div>
                  <span class="absolute inset-0 flex items-center justify-center text-white text-sm tracking-wider transform -translate-y-full group-hover:translate-y-0 transition-transform duration-500">
                    UMÓW WIZYTĘ
                  </span>
                </a>
                <a href="#essence" class="px-8 py-4 text-sm tracking-wider text-neutral-600 hover:text-neutral-900 transition-colors">
                  DOWIEDZ SIĘ WIĘCEJ
                </a>
              </div>
              
              <!-- Link powrotny -->
              <div class="mt-24">
                <a href="/#find" class="text-sm text-neutral-400 hover:text-neutral-600 transition-colors inline-flex items-center gap-2">
                  ← Zobacz innych terapeutów
                </a>
              </div>
            </div>

            <!-- Hero Image - Portrait Style -->
            <div class="col-span-12 lg:col-span-5 relative">
              <div class="aspect-[3/4] relative overflow-hidden">
                <img 
                  src={`/images/therapists/${therapist.img}.webp`}
                  alt={therapist.name}
                  class="w-full h-full object-cover filter grayscale-[30%]"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/20 to-transparent"></div>
              </div>
              <!-- Image Caption -->
              <p class="text-xs text-neutral-400 mt-4 text-right">
                Portrait, 2024
              </p>
            </div>
          </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-8 lg:left-16">
          <p class="text-xs tracking-[0.3em] text-neutral-400 -rotate-90 origin-left">SCROLL TO EXPLORE</p>
        </div>
      </section>
    )}

    <!-- Essence/Philosophy - Museum Wall Style -->
    {sections.essence && (
      <section id="essence" class="py-32 px-8 lg:px-16 bg-white">
        <div class="max-w-screen-2xl mx-auto">
          <!-- Section Label -->
          <div class="flex items-center gap-8 mb-16">
            <span class="text-5xl font-light text-neutral-200">{sections.essence.sectionNumber}</span>
            <div>
              <h3 class="text-2xl tracking-[0.3em] font-light">{sections.essence.sectionTitle}</h3>
              <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">{sections.essence.sectionSubtitle}</p>
            </div>
          </div>

          <!-- Philosophy Grid -->
          <div class="grid grid-cols-12 gap-8 lg:gap-16">
            <div class="col-span-12 lg:col-span-7">
              <p class="font-serif text-4xl lg:text-5xl leading-tight mb-12" set:html={sections.essence.quote} />
              
              <div class="prose prose-lg max-w-none">
                {sections.essence.content.map((paragraph: string) => (
                  <p class="text-neutral-600 leading-relaxed mb-6">{paragraph}</p>
                ))}
              </div>
            </div>

            <!-- Three Pillars -->
            {sections.essence.pillars && (
              <div class="col-span-12 lg:col-span-5">
                <div class="space-y-12">
                  {sections.essence.pillars.map((pillar: any) => (
                    <div class="text-center">
                      <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-rose-50 to-neutral-50 flex items-center justify-center">
                        <span class="text-4xl">{pillar.icon}</span>
                      </div>
                      <h4 class="text-xl tracking-wider mb-2">{pillar.title}</h4>
                      <p class="text-sm text-neutral-600">{pillar.description}</p>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </section>
    )}

    <!-- Journey/Services - Exhibition Rooms -->
    {sections.journey && (
      <section id="journey" class="py-32 px-8 lg:px-16">
        <div class="max-w-screen-2xl mx-auto">
          <!-- Section Label -->
          <div class="flex items-center gap-8 mb-16">
            <span class="text-5xl font-light text-neutral-200">{sections.journey.sectionNumber}</span>
            <div>
              <h3 class="text-2xl tracking-[0.3em] font-light">{sections.journey.sectionTitle}</h3>
              <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">{sections.journey.sectionSubtitle}</p>
            </div>
          </div>

          <!-- Exhibition Notice -->
          <div class="text-center mb-24">
            <p class="font-serif text-3xl lg:text-4xl text-neutral-700" set:html={sections.journey.quote} />
          </div>

          <!-- Services as Exhibition Pieces -->
          <div class="space-y-32">
            {sections.journey.paths.map((path: any, index: number) => (
              <div class="grid grid-cols-12 gap-8 lg:gap-16 items-center">
                {/* Image */}
                <div class={`col-span-12 lg:col-span-5 ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                  <div class="relative">
                    <img 
                      src="/images/office/therapy-session.jpg"
                      alt={path.title}
                      class="w-full aspect-[4/5] object-cover"
                      loading="lazy"
                    />
                    <div class="absolute top-8 left-8 bg-white/90 backdrop-blur-sm px-4 py-2">
                      <p class="text-3xl font-light">{path.roman}</p>
                    </div>
                  </div>
                </div>

                {/* Content */}
                <div class={`col-span-12 lg:col-span-7 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
                  <div class="mb-8">
                    <h4 class="text-3xl lg:text-4xl tracking-wide mb-2">{path.title}</h4>
                    <p class="text-sm tracking-[0.2em] text-neutral-400">{path.subtitle}</p>
                  </div>

                  <p class="text-xl text-neutral-600 mb-8">
                    {path.description}
                  </p>

                  <div class="grid grid-cols-2 gap-8 mb-8">
                    <div>
                      <p class="text-xs tracking-[0.2em] text-neutral-400 mb-2">OBSZARY PRACY</p>
                      <ul class="space-y-2">
                        {path.areas.map((area: string) => (
                          <li class="flex items-center gap-2 text-sm">
                            <span class="w-1 h-1 bg-rose-700 rounded-full"></span>
                            {area}
                          </li>
                        ))}
                      </ul>
                    </div>
                    <div>
                      <p class="text-xs tracking-[0.2em] text-neutral-400 mb-4">INFORMACJE PRAKTYCZNE</p>
                      <dl class="space-y-2 text-sm">
                        <div>
                          <dt class="text-neutral-400 inline">Czas trwania: </dt>
                          <dd class="inline">{path.details.time}</dd>
                        </div>
                        <div>
                          <dt class="text-neutral-400 inline">Inwestycja: </dt>
                          <dd class="inline">{path.details.investment}</dd>
                        </div>
                        <div>
                          <dt class="text-neutral-400 inline">Format: </dt>
                          <dd class="inline">{path.details.format}</dd>
                        </div>
                      </dl>
                    </div>
                  </div>

                  <a href="#connection" class="inline-flex items-center gap-3 text-sm tracking-wider hover:gap-5 transition-all">
                    DOWIEDZ SIĘ WIĘCEJ
                    <span>→</span>
                  </a>
                </div>
              </div>
            ))}
          </div>

          <!-- Free Consultation Banner -->
          <div class="mt-32 text-center py-16 bg-gradient-to-r from-rose-50 to-neutral-50">
            <p class="text-xs tracking-[0.3em] text-neutral-600 mb-4">PIERWSZE SPOTKANIE</p>
            <p class="font-serif text-3xl mb-8">Konsultacja wstępna jest bezpłatna</p>
            <a href="#connection" class="inline-block border border-neutral-900 px-12 py-4 text-sm tracking-wider hover:bg-neutral-900 hover:text-white transition-all">
              ZAREZERWUJ TERMIN
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Space/About - Artist Statement -->
    {sections.space && (
      <section id="space" class="py-32 px-8 lg:px-16 bg-white">
        <div class="max-w-screen-2xl mx-auto">
          <!-- Section Label -->
          <div class="flex items-center gap-8 mb-16">
            <span class="text-5xl font-light text-neutral-200">{sections.space.sectionNumber}</span>
            <div>
              <h3 class="text-2xl tracking-[0.3em] font-light">{sections.space.sectionTitle}</h3>
              <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">{sections.space.sectionSubtitle}</p>
            </div>
          </div>

          <div class="grid grid-cols-12 gap-8 lg:gap-16">
            <!-- About Text -->
            <div class="col-span-12 lg:col-span-6">
              <h4 class="font-serif text-4xl lg:text-5xl mb-8">{sections.space.title}</h4>
              
              <div class="prose prose-lg">
                {sections.space.bio.map((paragraph: string) => (
                  <p class="text-neutral-600 mb-6">{paragraph}</p>
                ))}
              </div>

              <!-- Credentials -->
              {sections.space.credentials && (
                <div class="grid grid-cols-2 gap-6 py-8 border-t border-neutral-200">
                  <div>
                    <p class="text-xs tracking-[0.2em] text-neutral-400 mb-2">EDUKACJA</p>
                    <p class="text-sm" set:html={sections.space.credentials.education}></p>
                  </div>
                  <div>
                    <p class="text-xs tracking-[0.2em] text-neutral-400 mb-2">CERTYFIKAT</p>
                    <p class="text-sm" set:html={sections.space.credentials.certification}></p>
                  </div>
                </div>
              )}
              
              <!-- Specjalizacje -->
              {therapist.spec && (
                <div class="mt-8">
                  <p class="text-xs tracking-[0.2em] text-neutral-400 mb-4">SPECJALIZACJE</p>
                  <div class="flex flex-wrap gap-2">
                    {therapist.spec.map((spec: string) => (
                      <span class="text-xs bg-neutral-100 px-3 py-1 rounded-full text-gray-600">
                        {spec}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>

            <!-- Space Images -->
            <div class="col-span-12 lg:col-span-6">
              <div class="grid grid-cols-2 gap-4">
                <img 
                  src="/images/office/przykladowy-gabinet-1.webp"
                  alt="Gabinet"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <img 
                  src="/images/office/przykladowy-gabinet-1.webp"
                  alt="Przestrzeń terapeutyczna"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              {sections.space.credentials?.location && (
                <div class="mt-8 p-6 bg-neutral-50">
                  <p class="text-xs tracking-[0.2em] text-neutral-400 mb-3">LOKALIZACJA</p>
                  <address class="not-italic text-sm">
                    {therapist.loc}<br/>
                    Warszawa<br/>
                    {sections.space.credentials.location.metro}
                  </address>
                  <p class="text-xs text-neutral-400 mt-4">
                    {sections.space.credentials.note}
                  </p>
                </div>
              )}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Wisdom/Insights - Reading Room -->
    {sections.wisdom && (
      <section id="wisdom" class="py-32 px-8 lg:px-16">
        <div class="max-w-screen-2xl mx-auto">
          <!-- Section Label -->
          <div class="flex items-center gap-8 mb-16">
            <span class="text-5xl font-light text-neutral-200">{sections.wisdom.sectionNumber}</span>
            <div>
              <h3 class="text-2xl tracking-[0.3em] font-light">{sections.wisdom.sectionTitle}</h3>
              <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">{sections.wisdom.sectionSubtitle}</p>
            </div>
          </div>

          <!-- Introduction -->
          <div class="max-w-3xl mx-auto text-center mb-16">
            <p class="font-serif text-3xl text-neutral-700" set:html={sections.wisdom.quote} />
          </div>

          <!-- Articles Grid -->
          <div class="grid grid-cols-12 gap-8">
            {sections.wisdom.pieces.map((piece: any) => (
              <article class="col-span-12 md:col-span-4 group">
                <div class="h-full border border-neutral-200 p-8 hover:border-rose-300 transition-colors">
                  <p class="text-xs tracking-[0.3em] text-rose-700 mb-4">
                    {piece.type.toUpperCase()}
                  </p>
                  <h5 class="font-serif text-2xl mb-4 group-hover:text-rose-700 transition-colors">
                    {piece.title}
                  </h5>
                  <p class="text-neutral-600 mb-6 leading-relaxed">
                    {piece.excerpt}
                  </p>
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-neutral-400">{piece.readTime} czytania</span>
                    <a href="#" class="text-sm tracking-wider hover:tracking-widest transition-all">
                      CZYTAJ →
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>

          <!-- Newsletter -->
          {sections.wisdom.newsletter && (
            <div class="mt-24 max-w-2xl mx-auto text-center">
              <p class="text-xs tracking-[0.3em] text-neutral-400 mb-4">MONTHLY LETTER</p>
              <p class="font-serif text-2xl mb-8">
                {sections.wisdom.newsletter.title}
              </p>
              <form class="flex gap-4 max-w-md mx-auto">
                <input 
                  type="email" 
                  placeholder="twój@email.pl"
                  class="flex-grow px-6 py-3 border border-neutral-300 focus:outline-none focus:border-rose-700 transition-colors"
                />
                <button class="px-8 py-3 bg-neutral-900 text-white hover:bg-rose-700 transition-colors">
                  ZAPISZ
                </button>
              </form>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- Connection/Contact - Museum Info Desk -->
    {sections.connection && (
      <section id="connection" class="py-32 px-8 lg:px-16 bg-gradient-to-br from-rose-50 to-neutral-50">
        <div class="max-w-screen-2xl mx-auto">
          <!-- Section Label -->
          <div class="flex items-center gap-8 mb-16">
            <span class="text-5xl font-light text-white/50">{sections.connection.sectionNumber}</span>
            <div>
              <h3 class="text-2xl tracking-[0.3em] font-light">{sections.connection.sectionTitle}</h3>
              <p class="text-xs tracking-[0.2em] text-neutral-600 mt-1">{sections.connection.sectionSubtitle}</p>
            </div>
          </div>

          <div class="grid grid-cols-12 gap-8 lg:gap-16">
            <!-- Contact Info -->
            <div class="col-span-12 lg:col-span-6">
              <h4 class="font-serif text-4xl lg:text-5xl mb-8" set:html={sections.connection.headline} />
              
              <p class="text-xl text-neutral-600 mb-12">
                {sections.connection.intro}
              </p>

              <div class="space-y-8">
                <div>
                  <p class="text-xs tracking-[0.3em] text-neutral-400 mb-3">TELEFON</p>
                  <a href={`tel:${sections.connection.phone}`} class="text-3xl font-light hover:text-rose-700 transition-colors">
                    {sections.connection.phone}
                  </a>
                </div>
                
                <div>
                  <p class="text-xs tracking-[0.3em] text-neutral-400 mb-3">EMAIL</p>
                  <a href={`mailto:${sections.connection.email}`} class="text-xl hover:text-rose-700 transition-colors">
                    {sections.connection.email}
                  </a>
                </div>
                
                <div>
                  <p class="text-xs tracking-[0.3em] text-neutral-400 mb-3">GODZINY PRZYJĘĆ</p>
                  <p class="text-neutral-700">
                    {sections.connection.hours.weekdays}<br/>
                    {sections.connection.hours.saturday}<br/>
                    <span class="text-sm text-neutral-500">{sections.connection.hours.note}</span>
                  </p>
                </div>
                
                <!-- Status dostępności -->
                <div class="mt-8 p-4 bg-white/60 rounded">
                  <p class="text-sm">
                    {therapist.avail ? (
                      <span class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                        Obecnie przyjmuję nowych pacjentów
                      </span>
                    ) : (
                      <span class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-orange-500 rounded-full"></span>
                        Lista oczekujących
                      </span>
                    )}
                  </p>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="col-span-12 lg:col-span-6">
              <div class="bg-white p-12">
                <h5 class="text-xl tracking-wider mb-8">FORMULARZ KONTAKTOWY</h5>
                
                <form class="space-y-6">
                  <div>
                    <label class="text-xs tracking-[0.2em] text-neutral-400 block mb-2">
                      IMIĘ I NAZWISKO
                    </label>
                    <input 
                      type="text"
                      class="w-full px-0 py-3 border-0 border-b border-neutral-300 focus:outline-none focus:border-rose-700 transition-colors"
                    />
                  </div>
                  
                  <div>
                    <label class="text-xs tracking-[0.2em] text-neutral-400 block mb-2">
                      EMAIL
                    </label>
                    <input 
                      type="email"
                      class="w-full px-0 py-3 border-0 border-b border-neutral-300 focus:outline-none focus:border-rose-700 transition-colors"
                    />
                  </div>
                  
                  <div>
                    <label class="text-xs tracking-[0.2em] text-neutral-400 block mb-2">
                      WIADOMOŚĆ
                    </label>
                    <textarea 
                      rows="4"
                      class="w-full px-0 py-3 border-0 border-b border-neutral-300 focus:outline-none focus:border-rose-700 transition-colors resize-none"
                    ></textarea>
                  </div>
                  
                  <button class="w-full py-4 bg-neutral-900 text-white tracking-wider hover:bg-rose-700 transition-colors">
                    WYŚLIJ WIADOMOŚĆ
                  </button>
                </form>
                
                <p class="text-xs text-neutral-400 mt-6 text-center">
                  {sections.connection.responseTime}
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Footer - spójny z głównym serwisem -->
    <footer class="bg-gray-50 border-t border-gray-100 px-8 lg:px-16 py-16">
      <div class="max-w-screen-2xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-12">
          <div class="col-span-12 lg:col-span-6">
            <Logo size="s" class="mb-4" />
            <p class="text-sm text-gray-600 mb-4">
              Platforma łącząca osoby potrzebujące wsparcia psychologicznego z certyfikowanymi psychoterapeutami.
            </p>
