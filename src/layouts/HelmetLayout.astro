---
import SEO from '@components/SEO.astro';
import '@/styles/global.css';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
  structuredData?: object;
  theme?: string;
}

const { theme = 'default', ...seoProps } = Astro.props;
---

<!doctype html>
<html lang="pl" data-theme={theme}>
<head>
  <SEO {...seoProps} />
  <slot name="head" />
</head>
<body>
  <a href="#main" class="sr-only focus:not-sr-only">Przejdź do treści</a>
  
  <slot />
  
  <slot name="scripts" />
</body>
</html>