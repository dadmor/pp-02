---
import SEO from '@components/SEO.astro';
import '@/styles/global.css';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
  structuredData?: object;
  theme?: string;
  showHeader?: boolean;
  showFooter?: boolean;
  mainClass?: string;
}

const { 
  theme = 'default',
  showHeader = true, 
  showFooter = true,
  mainClass = '',
  ...seoProps 
} = Astro.props;
---

<!doctype html>
<html lang="pl" data-theme={theme}>
<head>
  <SEO {...seoProps} />
  <slot name="head" />
</head>
<body>
  <a href="#main" class="sr-only focus:not-sr-only">Przejdź do treści</a>
  
  <slot name="header" />
  
  <main id="main" class={mainClass}>
    <slot />
  </main>
  
  <slot name="footer" />
  
  <slot name="scripts" />
</body>
</html>