---
// ŚCIEŻKA: src/themes/default/sections/Process.astro
export interface Props {
  data: {
    eyebrow?: string;
    title: string;
    titleHighlight?: string;
    subtitle?: string;
    steps: Array<{
      num: string;
      title: string;
      desc: string;
    }>;
    cta?: {
      text: string;
      href: string;
    };
  };
  settings?: {
    background?: 'white' | 'gray';
    columns?: 2 | 4;
  };
}

const { data, settings = {} } = Astro.props;
const { background = 'white', columns = 4 } = settings;

const bgClass = background === 'white' ? 'bg-white' : 'bg-gray-50';
const gridClass = columns === 2 ? 'md:grid-cols-2' : 'md:grid-cols-2 lg:grid-cols-4';
---

<section id="how" class={`py-24 px-6 md:px-8 ${bgClass}`}>
  <div class="max-w-6xl mx-auto">
    <header class="text-center mb-16">
      {data.eyebrow && (
        <p class="text-orange-700 font-medium mb-4 text-sm tracking-wide uppercase">{data.eyebrow}</p>
      )}
      <h2 class="font-serif text-4xl md:text-5xl mb-4">
        {data.title}
        {data.titleHighlight && (
          <>
            <br>{data.titleHighlight}
          </>
        )}
      </h2>
      {data.subtitle && (
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {data.subtitle}
        </p>
      )}
    </header>
    
    <ol class={`grid ${gridClass} gap-8`}>
      {data.steps.map((step) => (
        <li>
          <strong class="text-6xl font-light text-orange-600 mb-6 block">{step.num}</strong>
          <h3 class="text-xl font-medium mb-3">{step.title}</h3>
          <p class="text-sm text-gray-600">{step.desc}</p>
        </li>
      ))}
    </ol>
    
    {data.cta && (
      <nav class="text-center mt-16">
        <a href={data.cta.href} class="inline-flex items-center gap-2 text-orange-700 font-medium">
          {data.cta.text}
          <svg class="w-5 h-5"><use href="/icons.svg#arrow-right"></use></svg>
        </a>
      </nav>
    )}
  </div>
</section>