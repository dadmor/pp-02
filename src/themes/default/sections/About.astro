
---
// Ujednolicona struktura danych dla wszystkich theme'Ã³w
export interface Props {
  data: {
    title: string;
    paragraphs: string[];
    highlights?: {
      title: string;
      items: string[];
    }[];
    credentials?: {
      education?: string;
      certification?: string;
      specialization?: string;
    };
    image?: string;
    imageCaption?: string;
  };
}

const { data } = Astro.props;
---

<section id="about" class="py-24 px-6 md:px-8 bg-orange-50">
  <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16 items-center">
    <article>
      <header>
        <p class="text-orange-700 font-medium mb-4 text-sm tracking-wide uppercase">O mnie</p>
        <h2 class="font-serif text-4xl md:text-5xl mb-6">{data.title}</h2>
      </header>
      
      <div class="space-y-4 text-gray-600">
        {data.paragraphs.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </div>
      
      {data.highlights && data.highlights.length > 0 && (
        <div class="grid grid-cols-2 gap-8 mt-10">
          {data.highlights.map((section) => (
            <section>
              <h3 class="font-medium mb-4 text-gray-900">{section.title}</h3>
              <ul class="space-y-3 text-sm text-gray-600">
                {section.items.map(item => (
                  <li class="flex items-start gap-3">
                    <span class="w-1.5 h-1.5 bg-orange-600 rounded-full mt-1.5 flex-shrink-0"></span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </section>
          ))}
        </div>
      )}
    </article>
  </div>
</section>