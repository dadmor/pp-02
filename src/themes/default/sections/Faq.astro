---
// ŚCIEŻKA: src/themes/default/sections/Faq.astro
export interface Props {
  data: {
    title: string;
    questions: Array<{
      q: string;
      a: string;
    }>;
    cta?: {
      text: string;
      href: string;
    };
  };
}

const { data } = Astro.props;
---

<div class="faq-section">
  <h3 class="font-serif text-3xl mb-8">{data.title}</h3>
  <dl class="space-y-6">
    {data.questions.map((faq, i) => (
      <div class={i < data.questions.length - 1 ? "pb-6 border-b border-gray-100" : "pb-6"}>
        <dt class="font-medium mb-3 text-gray-900">{faq.q}</dt>
        <dd class="text-sm text-gray-600">{faq.a}</dd>
      </div>
    ))}
  </dl>
  {data.cta && (
    <a href={data.cta.href} class="inline-flex items-center gap-2 text-orange-700 font-medium mt-8">
      {data.cta.text}
      <svg class="w-4 h-4"><use href="/icons.svg#arrow-right"></use></svg>
    </a>
  )}
</div>