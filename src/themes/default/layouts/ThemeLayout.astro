---
import HelmetLayout from '@layouts/HelmetLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
  structuredData?: object;
  content?: any;
}

const { content, ...layoutProps } = Astro.props;
---

<HelmetLayout {...layoutProps} theme="default">
  <Header />
  
  <main id="main" class="pt-20">
    <slot />
  </main>
  
  <Footer />
</HelmetLayout>