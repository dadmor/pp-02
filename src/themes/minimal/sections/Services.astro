---
// ŚCIEŻKA: src/themes/minimal/sections/Services.astro
export interface Props {
  data: {
    title: string;
    services: Array<{
      number: string;
      title: string;
      description: string;
      details: string;
    }>;
    footer?: {
      text: string;
      cta: {
        text: string;
        href: string;
      };
    };
  };
}

const { data } = Astro.props;
---

<section id="practice" class="py-32 px-6 bg-orange-50/30">
  <div class="max-w-screen-xl mx-auto">
    <div class="grid grid-cols-12 gap-6 mb-16">
      <div class="col-span-12 md:col-span-2">
        <p class="text-sm tracking-[0.2em] text-slate-800 font-light">PRAKTYKA</p>
      </div>
      <div class="col-span-12 md:col-span-6">
        <h2 class="font-serif text-4xl md:text-5xl leading-tight">
          {data.title}
        </h2>
      </div>
    </div>

    <div class="space-y-16">
      {data.services.map((service) => (
        <div class="grid grid-cols-12 gap-6 py-12 border-t border-neutral-200">
          <div class="col-span-12 md:col-span-1 text-2xl text-orange-600 font-light">
            {service.number}
          </div>
          <div class="col-span-12 md:col-span-4">
            <h3 class="text-2xl mb-4">{service.title}</h3>
            <p class="text-neutral-600 leading-relaxed">{service.description}</p>
          </div>
          <div class="col-span-12 md:col-span-2 md:col-start-11 text-sm text-neutral-500">
            {service.details}
          </div>
        </div>
      ))}
    </div>

    {data.footer && (
      <div class="grid grid-cols-12 gap-6 mt-24">
        <div class="col-span-12 md:col-span-6 md:col-start-4 text-center">
          <p class="text-neutral-600 mb-6">
            {data.footer.text}
          </p>
          <a href={data.footer.cta.href} class="inline-block bg-gray-900 text-white px-12 py-4 text-sm tracking-widest hover:bg-gray-800 transition-colors rounded-full">
            {data.footer.cta.text}
          </a>
        </div>
      </div>
    )}
  </div>
</section>