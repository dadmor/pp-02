---
// ŚCIEŻKA: src/themes/minimal/sections/Office.astro
export interface Props {
  data: {
    description: string;
    address: {
      street: string;
      city: string;
      country: string;
    };
    image?: string;
  };
}

const { data } = Astro.props;
---

<section class="py-32 px-6 bg-gray-50">
  <div class="max-w-screen-xl mx-auto">
    <div class="grid grid-cols-12 gap-6">
      <div class="col-span-12 md:col-span-10 md:col-start-2">
        <img 
          src={data.image || "/images/office/przykladowy-gabinet-1.webp"}
          alt="Gabinet terapeutyczny"
          class="w-full grayscale hover:grayscale-0 transition-all duration-700"
          width="1200"
          height="800"
          loading="lazy"
        />
        <div class="grid grid-cols-12 gap-6 mt-8">
          <div class="col-span-12 md:col-span-6">
            <p class="text-sm tracking-[0.2em] text-slate-800 font-light mb-4">PRZESTRZEŃ</p>
            <p class="text-lg leading-[1.75] font-light">
              {data.description}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>