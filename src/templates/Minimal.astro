---
export interface Props {
  therapist: any;
}

const { therapist } = Astro.props;
const s = therapist.sections;
---

<!DOCTYPE html>
<html lang="pl" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={s.hero?.intro || therapist.title}>
  <title>{therapist.name} - Psychoterapeuta Warszawa</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
  <style>@import "/app.css";</style>
</head>
<body class="bg-white text-black font-sans antialiased">
  
  <!-- Navigation - ultra minimal -->
  <nav class="fixed top-0 w-full z-50 bg-white/90 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-m flex justify-between items-center h-20">
      <span class="text-sm tracking-[0.2em] font-medium">
        {therapist.name.toUpperCase()}
      </span>
      <a href="/#find" class="text-sm hover:opacity-50 transition-opacity">
        ← POWRÓT
      </a>
    </div>
  </nav>

  <!-- Hero - Asymmetric Bauhaus Grid -->
  <section class="min-h-screen grid grid-cols-3 pt-20">
    <!-- Left column - vertical nav -->
    <nav class="flex items-center justify-center">
      <div class="[writing-mode:vertical-rl] space-y-xl text-sm tracking-wider text-gray-400">
        <a href="#philosophy" class="hover:text-black transition-colors">FILOZOFIA</a>
        <a href="#practice" class="hover:text-black transition-colors">PRAKTYKA</a>
        <a href="#contact" class="hover:text-black transition-colors">KONTAKT</a>
      </div>
    </nav>
    
    <!-- Center - content -->
    <div class="flex items-center px-m">
      <div>
        <h1 class="text-hero font-light leading-tight mb-m" set:html={s.hero.headline} />
        <p class="text-subtitle text-gray-600 leading-relaxed mb-l max-w-2xl">
          {s.hero.intro}
        </p>
        <a href="#contact" class="inline-block bg-black text-white px-l py-s hover:bg-gray-800 transition-colors">
          UMÓW SESJĘ
        </a>
      </div>
    </div>
    
    <!-- Right - image -->
    <div class="relative h-full">
      <img 
        src={`/images/therapists/${therapist.img}.webp`}
        alt=""
        class="absolute inset-0 w-full h-full object-cover"
        loading="lazy"
      />
      <div class="absolute bottom-8 left-8 bg-white/90 backdrop-blur p-4">
        <span class="text-micro tracking-[0.2em]">
          {therapist.exp} LAT PRAKTYKI
        </span>
      </div>
    </div>
  </section>

  <!-- Philosophy -->
  <section id="philosophy" class="py-2xl px-m">
    <div class="max-w-prose mx-auto">
      <h2 class="text-display font-light text-center mb-xl">
        {s.philosophy.title}
      </h2>
      {s.philosophy.content.map((p: string) => (
        <p class="text-subtitle font-serif leading-relaxed mb-m text-gray-700">
          {p}
        </p>
      ))}
      
      {s.philosophy.quote && (
        <blockquote class="mt-2xl pt-xl border-t border-gray-200">
          <p class="text-title font-serif italic text-center text-gray-600">
            „{s.philosophy.quote.text}"
          </p>
          <cite class="block text-sm text-center mt-m text-gray-400 not-italic">
            — {s.philosophy.quote.author}
          </cite>
        </blockquote>
      )}
    </div>
  </section>

  <!-- Services - numbered list -->
  <section id="practice" class="py-2xl px-m bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-title font-light mb-xl">FORMY PRACY</h2>
      
      <div class="space-y-0">
        {s.services.map((service: any, i: number) => (
          <div class="grid grid-cols-12 gap-m py-m border-t border-gray-200">
            <div class="col-span-1">
              <span class="text-display font-light text-gray-300">
                {(i + 1).toString().padStart(2, '0')}
              </span>
            </div>
            <div class="col-span-7">
              <h3 class="text-subtitle font-medium mb-s">{service.title}</h3>
              <p class="text-gray-600">{service.description}</p>
            </div>
            <div class="col-span-4 text-right">
              <span class="text-sm text-gray-500">{service.details}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About -->
  {s.about && (
    <section id="about" class="py-2xl px-m">
      <div class="max-w-7xl mx-auto grid grid-cols-12 gap-xl">
        <div class="col-span-2">
          <span class="text-micro tracking-[0.2em] text-gray-400">O MNIE</span>
        </div>
        <div class="col-span-6">
          {s.about.bio.map((p: string) => (
            <p class="leading-relaxed mb-m text-gray-700">{p}</p>
          ))}
        </div>
        <div class="col-span-4">
          {s.about.credentials && (
            <dl class="space-y-m text-sm">
              <div>
                <dt class="text-micro tracking-[0.2em] text-gray-400 mb-xs">WYKSZTAŁCENIE</dt>
                <dd>{s.about.credentials.education}</dd>
              </div>
              <div>
                <dt class="text-micro tracking-[0.2em] text-gray-400 mb-xs">CERTYFIKACJA</dt>
                <dd>{s.about.credentials.certification}</dd>
              </div>
              <div>
                <dt class="text-micro tracking-[0.2em] text-gray-400 mb-xs">SPECJALIZACJA</dt>
                <dd>{s.about.credentials.specialization}</dd>
              </div>
            </dl>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Contact -->
  <section id="contact" class="py-2xl px-m bg-black text-white">
    <div class="max-w-5xl mx-auto grid grid-cols-2 gap-xl">
      <div>
        <h2 class="text-display font-light mb-m">
          {s.contact.headline}
        </h2>
        <div class="space-y-m">
          <div>
            <span class="text-micro tracking-[0.2em] text-gray-500 block mb-xs">TELEFON</span>
            <a href={`tel:${s.contact.phone}`} class="text-subtitle hover:text-gray-300 transition-colors">
              {s.contact.phone}
            </a>
          </div>
          <div>
            <span class="text-micro tracking-[0.2em] text-gray-500 block mb-xs">EMAIL</span>
            <a href={`mailto:${s.contact.email}`} class="hover:text-gray-300 transition-colors">
              {s.contact.email}
            </a>
          </div>
          <div>
            <span class="text-micro tracking-[0.2em] text-gray-500 block mb-xs">GODZINY</span>
            <span class="text-sm">{s.contact.hours?.weekdays || 'Pon-Pt: 9:00-19:00'}</span>
          </div>
        </div>
      </div>
      
      <form class="space-y-m">
        <input 
          type="text" 
          placeholder="Imię"
          class="w-full bg-transparent border-b border-gray-800 text-white placeholder-gray-600 py-s focus:outline-none focus:border-white transition-colors"
        />
        <input 
          type="email" 
          placeholder="Email"
          class="w-full bg-transparent border-b border-gray-800 text-white placeholder-gray-600 py-s focus:outline-none focus:border-white transition-colors"
        />
        <textarea 
          placeholder="Wiadomość"
          rows="4"
          class="w-full bg-transparent border-b border-gray-800 text-white placeholder-gray-600 py-s focus:outline-none focus:border-white transition-colors resize-none"
        ></textarea>
        <button type="submit" class="w-full bg-white text-black py-s hover:bg-gray-100 transition-colors">
          WYŚLIJ
        </button>
      </form>
    </div>
  </section>

</body>
</html>