---
export interface Props {
  therapist: any;
}

const { therapist } = Astro.props;
const s = therapist.sections;
---

<!DOCTYPE html>
<html lang="pl" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={s.hero?.intro || therapist.title}>
  <title>{therapist.name} - Psychoterapeuta Warszawa</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Crimson+Pro:wght@300;400&display=swap" rel="stylesheet">
  <style>@import "/app.css";</style>
</head>
<body class="bg-stone-50 text-stone-900 font-sans antialiased">
  
  <!-- Navigation - warm & friendly -->
  <nav class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-sm border-b border-amber-100">
    <div class="max-w-7xl mx-auto px-m grid grid-cols-12 items-center h-20">
      <div class="col-span-3">
        <div>
          <span class="font-medium">{therapist.name}</span>
          <span class="block text-micro text-gray-500">Psychoterapeuta</span>
        </div>
      </div>
      <nav class="col-span-6 flex justify-center gap-m">
        {['O mnie', 'Jak pracuję', 'Dla kogo', 'Kontakt'].map(item => (
          <a href={`#${item.toLowerCase().replace(' ', '-')}`} class="text-sm hover:text-amber-600 transition-colors">
            {item}
          </a>
        ))}
      </nav>
      <div class="col-span-3 text-right">
        <a href="#kontakt" class="bg-amber-500 text-white px-m py-xs text-sm hover:bg-amber-600 transition-colors rounded-full">
          Umów konsultację
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero - warm welcome -->
  <section class="min-h-screen flex items-center px-m pt-32">
    <div class="max-w-7xl mx-auto grid grid-cols-12 gap-l">
      <div class="col-span-7">
        <div class="w-16 h-1 bg-amber-500 mb-m"></div>
        <h1 class="text-hero font-serif font-light leading-tight mb-m" set:html={s.hero.headline} />
        <p class="text-subtitle text-stone-600 leading-relaxed mb-l max-w-2xl">
          {s.hero.intro}
        </p>
        
        <div class="flex gap-s mb-xl">
          <a href="#kontakt" class="bg-amber-500 text-white px-l py-s hover:bg-amber-600 transition-colors rounded-full">
            Umów bezpłatną rozmowę
          </a>
          <a href="#o-mnie" class="border border-stone-300 text-stone-700 px-l py-s hover:bg-white transition-colors rounded-full">
            Poznaj mnie
          </a>
        </div>

        {s.hero.stats && (
          <div class="grid grid-cols-4 gap-m">
            {s.hero.stats.map((stat: any) => (
              <div>
                <div class="text-title font-light text-amber-600">{stat.value}</div>
                <div class="text-sm text-stone-500">{stat.label}</div>
              </div>
            ))}
          </div>
        )}
      </div>
      
      <div class="col-span-5">
        <div class="relative">
          <img 
            src={`/images/therapists/${therapist.img}.webp`}
            alt={therapist.name}
            class="rounded-2xl shadow-xl"
            loading="lazy"
          />
          <div class="absolute -bottom-6 -left-6 bg-white p-m rounded-xl shadow-lg">
            <p class="text-sm font-medium">
              „{s.hero.quote || 'Każdy zasługuje na wsparcie'}"
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy - three pillars -->
  <section id="jak-pracuje" class="py-2xl px-m bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-xl">
        <div class="w-16 h-1 bg-amber-500 mx-auto mb-m"></div>
        <h2 class="text-display font-serif font-light">
          {s.philosophy.title}
        </h2>
      </div>
      
      <div class="grid grid-cols-3 gap-l">
        {s.philosophy.pillars.map((pillar: any) => (
          <div class="text-center">
            <div class="w-24 h-24 bg-amber-50 rounded-full flex items-center justify-center mx-auto mb-m">
              <span class="text-title font-serif">{pillar.number}</span>
            </div>
            <h3 class="text-subtitle font-medium mb-s">{pillar.title}</h3>
            <p class="text-sm text-stone-600 leading-relaxed">{pillar.description}</p>
          </div>
        ))}
      </div>
      
      {s.philosophy.quote && (
        <blockquote class="mt-2xl text-center py-xl border-t border-stone-200">
          <p class="text-title font-serif italic text-stone-700 mb-s">
            „{s.philosophy.quote.text}"
          </p>
          <cite class="text-sm text-stone-500 not-italic">
            — {s.philosophy.quote.author}
          </cite>
        </blockquote>
      )}
    </div>
  </section>

  <!-- Services - warm cards -->
  <section id="dla-kogo" class="py-2xl px-m">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-display font-serif font-light text-center mb-xl">
        Różne ścieżki do dobrostanu
      </h2>
      
      <div class="space-y-m">
        {s.services.map((service: any) => (
          <div class="bg-white rounded-2xl p-l shadow-sm hover:shadow-xl transition-shadow">
            <div class="grid grid-cols-12 gap-l">
              <div class="col-span-1">
                <span class="text-display font-light text-amber-200">{service.id}</span>
              </div>
              <div class="col-span-7">
                <span class="text-micro text-amber-600 tracking-[0.2em] block mb-s">
                  {service.category}
                </span>
                <h3 class="text-title font-serif font-medium mb-s">{service.title}</h3>
                <p class="text-stone-600 leading-relaxed mb-m">{service.description}</p>
                
                {service.features && (
                  <div class="flex flex-wrap gap-xs">
                    {service.features.map((feature: string) => (
                      <span class="text-xs bg-amber-50 text-amber-700 px-s py-xs rounded-full">
                        {feature}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              <div class="col-span-4 bg-amber-50 p-m rounded-xl">
                <h4 class="text-sm font-medium mb-s">Informacje praktyczne:</h4>
                <dl class="space-y-xs text-sm">
                  <div class="flex justify-between">
                    <dt class="text-stone-600">Czas:</dt>
                    <dd>{service.practical.duration}</dd>
                  </div>
                  <div class="flex justify-between">
                    <dt class="text-stone-600">Cena:</dt>
                    <dd>{service.practical.price}</dd>
                  </div>
                  <div class="flex justify-between">
                    <dt class="text-stone-600">Format:</dt>
                    <dd>{service.practical.location}</dd>
                  </div>
                </dl>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-xl">
        <p class="text-xl text-stone-700 mb-m">
          Pierwsza konsultacja jest bezpłatna i niezobowiązująca
        </p>
        <a href="#kontakt" class="inline-block bg-stone-900 text-white px-l py-s hover:bg-stone-800 transition-colors rounded-full">
          Zarezerwuj termin
        </a>
      </div>
    </div>
  </section>

  <!-- About - personal story -->
  <section id="o-mnie" class="py-2xl px-m bg-white">
    <div class="max-w-7xl mx-auto grid grid-cols-12 gap-xl">
      <div class="col-span-5">
        <img 
          src={`/images/therapists/${therapist.img}.webp`}
          alt={therapist.name}
          class="rounded-2xl mb-m"
          loading="lazy"
        />
        <div class="bg-amber-50 p-m rounded-xl">
          <p class="text-sm font-serif italic">
            „{s.about.quote}"
          </p>
        </div>
      </div>
      <div class="col-span-7">
        <div class="w-16 h-1 bg-amber-500 mb-m"></div>
        <h2 class="text-display font-serif font-light mb-m">
          {s.about.title || therapist.name}
        </h2>
        {s.about.bio.map((p: string) => (
          <p class="leading-relaxed mb-m text-stone-700">{p}</p>
        ))}
        
        <div class="grid grid-cols-2 gap-m mt-l p-m bg-stone-50 rounded-xl">
          <div>
            <h4 class="text-sm font-medium mb-xs">Wykształcenie</h4>
            <p class="text-sm text-stone-600">{s.about.credentials.education}</p>
          </div>
          <div>
            <h4 class="text-sm font-medium mb-xs">Certyfikaty</h4>
            <p class="text-sm text-stone-600">{s.about.credentials.certificate}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact - warm invitation -->
  <section id="kontakt" class="py-2xl px-m bg-gradient-to-br from-amber-50 to-orange-50">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-xl">
        <div class="w-16 h-1 bg-amber-500 mx-auto mb-m"></div>
        <h2 class="text-display font-serif font-light">{s.contact.title}</h2>
        <p class="text-subtitle text-stone-600 mt-s">{s.contact.subtitle}</p>
      </div>
      
      <div class="bg-white rounded-3xl p-l shadow-xl">
        <div class="grid grid-cols-2 gap-xl">
          <div>
            <h3 class="text-subtitle font-medium mb-m">Skontaktuj się ze mną</h3>
            <div class="space-y-m">
              <div>
                <span class="text-sm text-stone-500 block mb-xs">Telefon</span>
                <a href={`tel:${s.contact.phone}`} class="text-subtitle hover:text-amber-600 transition-colors">
                  {s.contact.phone}
                </a>
              </div>
              <div>
                <span class="text-sm text-stone-500 block mb-xs">Email</span>
                <a href={`mailto:${s.contact.email}`} class="hover:text-amber-600 transition-colors">
                  {s.contact.email}
                </a>
              </div>
              <div>
                <span class="text-sm text-stone-500 block mb-xs">Godziny przyjęć</span>
                <p class="text-sm">{s.contact.hours.weekdays}</p>
              </div>
            </div>
          </div>
          
          <form class="space-y-s">
            <input 
              type="text" 
              placeholder="Twoje imię"
              class="w-full px-s py-s bg-stone-50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400"
            />
            <input 
              type="email" 
              placeholder="Email"
              class="w-full px-s py-s bg-stone-50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400"
            />
            <textarea 
              placeholder="Jak mogę Ci pomóc?"
              rows="4"
              class="w-full px-s py-s bg-stone-50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 resize-none"
            ></textarea>
            <button type="submit" class="w-full bg-amber-500 text-white py-s hover:bg-amber-600 transition-colors rounded-lg">
              Wyślij wiadomość
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

</body>
</html>