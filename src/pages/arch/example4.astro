---
// src/pages/index.astro
import '../../styles/global.css';

const services = [
  {
    title: "Terapia indywidualna",
    description: "Bezpieczna przestrzeń dla Twojego rozwoju osobistego",
    features: ["Lęk i depresja", "Trauma i PTSD", "Relacje i przywiązanie", "Samoocena"],
    icon: "01"
  },
  {
    title: "Terapia par",
    description: "Odbudowanie więzi i komunikacji w związku",
    features: ["Kryzys w związku", "Problemy komunikacyjne", "Zdrada i odbudowa zaufania", "Intymność"],
    icon: "02"
  },
  {
    title: "Warsztaty grupowe",
    description: "Wspólna praca nad rozwojem w małych grupach",
    features: ["Mindfulness MBSR", "Regulacja emocji", "Asertywność", "Radzenie ze stresem"],
    icon: "03"
  }
];

const approach = [
  {
    number: "01",
    title: "Pierwsza konsultacja",
    description: "Bezpłatna 20-minutowa rozmowa telefoniczna, podczas której poznamy Twoje potrzeby i odpowiemy na pytania."
  },
  {
    number: "02",
    title: "Plan terapeutyczny",
    description: "Wspólnie ustalimy cele i metodę pracy dopasowaną do Twojej sytuacji. Każda droga jest inna."
  },
  {
    number: "03",
    title: "Regularne sesje",
    description: "Cotygodniowe spotkania w bezpiecznej przestrzeni, gdzie możesz być sobą bez masek i oceny."
  }
];

const testimonials = [
  {
    content: "Maria stworzyła przestrzeń, w której po raz pierwszy w życiu mogłam być w pełni sobą. Jej ciepło i profesjonalizm pomogły mi przejść przez najtrudniejszy okres.",
    author: "Klientka, 32 lata",
    duration: "2 lata terapii"
  },
  {
    content: "Myślałem, że terapia to oznaka słabości. Dziś wiem, że to najodważniejsza decyzja mojego życia. Polecam każdemu.",
    author: "Klient, 45 lat", 
    duration: "6 miesięcy terapii"
  }
];
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Maria Nowak - Psychoterapeutka | Warszawa</title>
    <meta name="description" content="Psychoterapia indywidualna i dla par w Warszawie. Specjalizuję się w terapii traumy, lęku i depresji. Umów bezpłatną konsultację.">
  </head>
  <body class="bg-stone-50 text-stone-800 antialiased">
    
    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-stone-50/90 backdrop-blur-md z-50 border-b border-stone-200/50">
      <div class="max-w-6xl mx-auto px-6 md:px-12">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="font-medium text-stone-900">Maria Nowak</a>
          
          <div class="hidden md:flex items-center gap-8 text-sm">
            <a href="#about" class="text-stone-600 hover:text-stone-900 transition-colors">O mnie</a>
            <a href="#services" class="text-stone-600 hover:text-stone-900 transition-colors">Oferta</a>
            <a href="#approach" class="text-stone-600 hover:text-stone-900 transition-colors">Jak pracuję</a>
            <a href="#testimonials" class="text-stone-600 hover:text-stone-900 transition-colors">Opinie</a>
            <a href="#contact" class="bg-stone-900 text-white px-5 py-2 rounded-full hover:bg-stone-800 transition-colors">
              Kontakt
            </a>
          </div>

          <button class="md:hidden p-2" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu -->
      <div class="hidden md:hidden border-t border-stone-200" id="mobile-menu">
        <div class="px-6 py-4 space-y-3">
          <a href="#about" class="block text-stone-600">O mnie</a>
          <a href="#services" class="block text-stone-600">Oferta</a>
          <a href="#approach" class="block text-stone-600">Jak pracuję</a>
          <a href="#testimonials" class="block text-stone-600">Opinie</a>
          <a href="#contact" class="block text-stone-600">Kontakt</a>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <section class="pt-32 pb-20 px-6 md:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="max-w-3xl">
          <p class="text-emerald-700 font-medium mb-4">Psychoterapeutka • Warszawa</p>
          <h1 class="text-4xl md:text-6xl font-light text-stone-900 mb-6 leading-tight">
            Twoja podróż do wewnętrznego spokoju zaczyna się tutaj
          </h1>
          <p class="text-xl text-stone-600 mb-10 leading-relaxed">
            Jestem Maria Nowak. Od 15 lat towarzyszę ludziom w odkrywaniu ich wewnętrznej siły 
            i budowaniu życia, które jest zgodne z ich wartościami.
          </p>
          
          <div class="flex flex-wrap gap-4">
            <a href="#contact" class="inline-flex items-center gap-2 bg-emerald-700 text-white px-8 py-4 rounded-full hover:bg-emerald-800 transition-colors">
              Umów bezpłatną konsultację
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <a href="#about" class="inline-flex items-center gap-2 text-stone-700 px-8 py-4 rounded-full border border-stone-300 hover:border-stone-400 transition-colors">
              Dowiedz się więcej
            </a>
          </div>
        </div>

        <!-- Trust indicators -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-20 pt-20 border-t border-stone-200">
          <div>
            <p class="text-3xl font-light text-stone-900">15+</p>
            <p class="text-sm text-stone-600 mt-1">lat doświadczenia</p>
          </div>
          <div>
            <p class="text-3xl font-light text-stone-900">500+</p>
            <p class="text-sm text-stone-600 mt-1">przeprowadzonych terapii</p>
          </div>
          <div>
            <p class="text-3xl font-light text-stone-900">CBT</p>
            <p class="text-sm text-stone-600 mt-1">certyfikat terapeuty</p>
          </div>
          <div>
            <p class="text-3xl font-light text-stone-900">PTP</p>
            <p class="text-sm text-stone-600 mt-1">członek Polskiego Towarzystwa</p>
          </div>
        </div>
      </div>
    </section>

    <!-- About -->
    <section id="about" class="py-20 px-6 md:px-12 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <p class="text-emerald-700 font-medium mb-4">O mnie</p>
            <h2 class="text-3xl md:text-4xl font-light text-stone-900 mb-6">
              Wierzę, że każdy zasługuje na życie w zgodzie ze sobą
            </h2>
            <div class="space-y-4 text-stone-600">
              <p>
                Nazywam się Maria Nowak i od ponad 15 lat pracuję jako psychoterapeutka. 
                Specjalizuję się w terapii poznawczo-behawioralnej (CBT) oraz terapii traumy.
              </p>
              <p>
                Ukończyłam psychologię na Uniwersytecie Warszawskim oraz 4-letnie szkolenie 
                w Szkole Psychoterapii PTP. Regularnie uczestniczę w superwizjach i szkoleniach, 
                aby móc oferować najwyższą jakość wsparcia.
              </p>
              <p>
                W swojej pracy łączę profesjonalizm z autentycznością. Wierzę, że relacja 
                terapeutyczna oparta na zaufaniu i szacunku jest fundamentem zmiany.
              </p>
            </div>
            
            <div class="mt-8 flex flex-wrap gap-4">
              <span class="px-4 py-2 bg-stone-100 text-stone-700 rounded-full text-sm">
                Terapia poznawczo-behawioralna
              </span>
              <span class="px-4 py-2 bg-stone-100 text-stone-700 rounded-full text-sm">
                EMDR
              </span>
              <span class="px-4 py-2 bg-stone-100 text-stone-700 rounded-full text-sm">
                Mindfulness
              </span>
              <span class="px-4 py-2 bg-stone-100 text-stone-700 rounded-full text-sm">
                Terapia schematu
              </span>
            </div>
          </div>
          
          <div class="relative">
            <img 
              src="https://images.unsplash.com/photo-1594824476967-48c8b964273f?w=600&h=700&fit=crop"
              alt="Maria Nowak - Psychoterapeutka"
              class="rounded-2xl shadow-xl"
            />
            <div class="absolute -bottom-6 -right-6 bg-emerald-700 text-white p-6 rounded-2xl">
              <p class="text-4xl font-light">95%</p>
              <p class="text-sm mt-1">klientów poleca</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services -->
    <section id="services" class="py-20 px-6 md:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="text-emerald-700 font-medium mb-4">Oferta</p>
          <h2 class="text-3xl md:text-4xl font-light text-stone-900 mb-4">
            Obszary, w których mogę Ci pomóc
          </h2>
          <p class="text-lg text-stone-600 max-w-2xl mx-auto">
            Każda terapia jest dopasowana do indywidualnych potrzeb. 
            Pracuję zarówno online, jak i stacjonarnie w Warszawie.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {services.map((service) => (
            <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-shadow">
              <div class="text-4xl font-light text-emerald-700 mb-4">{service.icon}</div>
              <h3 class="text-xl font-medium text-stone-900 mb-3">{service.title}</h3>
              <p class="text-stone-600 mb-6">{service.description}</p>
              
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-start gap-2 text-sm text-stone-600">
                    <svg class="w-5 h-5 text-emerald-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              
              <a href="#contact" class="inline-flex items-center gap-2 text-emerald-700 font-medium mt-6 hover:gap-3 transition-all">
                Dowiedz się więcej
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          ))}
        </div>

        <!-- Pricing note -->
        <div class="mt-16 text-center bg-emerald-50 rounded-2xl p-8">
          <p class="text-lg text-stone-700">
            <span class="font-medium">Pierwsza konsultacja jest bezpłatna.</span> Cena sesji terapeutycznej: 200-250 zł 
            (w zależności od typu terapii). Możliwość wystawienia faktury.
          </p>
        </div>
      </div>
    </section>

    <!-- Approach -->
    <section id="approach" class="py-20 px-6 md:px-12 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="text-emerald-700 font-medium mb-4">Jak pracuję</p>
          <h2 class="text-3xl md:text-4xl font-light text-stone-900 mb-4">
            Twoja droga do zmiany
          </h2>
          <p class="text-lg text-stone-600 max-w-2xl mx-auto">
            Proces terapeutyczny to podróż, którą odbywamy razem. 
            Oto jak wygląda współpraca ze mną:
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {approach.map((step) => (
            <div class="relative">
              <div class="text-6xl font-light text-stone-200 mb-4">{step.number}</div>
              <h3 class="text-xl font-medium text-stone-900 mb-3">{step.title}</h3>
              <p class="text-stone-600">{step.description}</p>
            </div>
          ))}
        </div>

        <div class="mt-16 bg-stone-50 rounded-2xl p-8 md:p-12">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h3 class="text-2xl font-light text-stone-900 mb-4">
                Gabinet w sercu Warszawy
              </h3>
              <p class="text-stone-600 mb-6">
                Przyjmuję w przytulnym gabinecie na Mokotowie, łatwo dostępnym 
                komunikacją miejską. Przestrzeń została zaprojektowana tak, 
                aby czuć się w niej bezpiecznie i komfortowo.
              </p>
              <div class="space-y-2 text-stone-600">
                <p class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  ul. Puławska 108, Warszawa
                </p>
                <p class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Pon-Pt: 9:00-19:00, Sob: 9:00-14:00
                </p>
              </div>
            </div>
            <div>
              <img 
                src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=600&h=400&fit=crop"
                alt="Gabinet psychoterapeutyczny"
                class="rounded-xl"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section id="testimonials" class="py-20 px-6 md:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="text-emerald-700 font-medium mb-4">Opinie</p>
          <h2 class="text-3xl md:text-4xl font-light text-stone-900 mb-4">
            Słowa moich klientów
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-sm">
              <div class="flex gap-1 mb-4">
                {[...Array(5)].map(() => (
                  <svg class="w-5 h-5 text-yellow-500 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <blockquote class="text-stone-600 mb-4 italic">
                "{testimonial.content}"
              </blockquote>
              <div class="flex items-center justify-between">
                <p class="font-medium text-stone-900">{testimonial.author}</p>
                <p class="text-sm text-stone-500">{testimonial.duration}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Blog/Resources -->
    <section class="py-20 px-6 md:px-12 bg-emerald-50">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="text-emerald-700 font-medium mb-4">Wiedza</p>
          <h2 class="text-3xl md:text-4xl font-light text-stone-900 mb-4">
            Materiały, które mogą Ci pomóc
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <img 
              src="https://images.unsplash.com/photo-1499209974431-9dddcece7f88?w=400&h=250&fit=crop"
              alt="Jak radzić sobie z lękiem"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-medium text-stone-900 mb-2">Jak radzić sobie z lękiem?</h3>
              <p class="text-sm text-stone-600 mb-4">Praktyczne techniki, które możesz zastosować już dziś...</p>
              <a href="#" class="text-emerald-700 font-medium text-sm">Czytaj więcej →</a>
            </div>
          </article>

          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <img 
              src="https://images.unsplash.com/photo-1506126613408-eca07ce68773?w=400&h=250&fit=crop"
              alt="Mindfulness dla początkujących"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-medium text-stone-900 mb-2">Mindfulness dla początkujących</h3>
              <p class="text-sm text-stone-600 mb-4">Wprowadzenie do praktyki uważności krok po kroku...</p>
              <a href="#" class="text-emerald-700 font-medium text-sm">Czytaj więcej →</a>
            </div>
          </article>

          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <img 
              src="https://images.unsplash.com/photo-1544027993-37dbfe43562a?w=400&h=250&fit=crop"
              alt="Czym jest terapia CBT"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-medium text-stone-900 mb-2">Czym jest terapia CBT?</h3>
              <p class="text-sm text-stone-600 mb-4">Poznaj podstawy terapii poznawczo-behawioralnej...</p>
              <a href="#" class="text-emerald-700 font-medium text-sm">Czytaj więcej →</a>
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section id="contact" class="py-20 px-6 md:px-12 bg-stone-900 text-white">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-light mb-6">
          Gotowy/a na pierwszy krok?
        </h2>
        <p class="text-xl text-stone-300 mb-10">
          Umów bezpłatną 20-minutową konsultację telefoniczną. 
          Porozmawiamy o Twoich potrzebach i zobaczysz, czy dobrze się ze mną czujesz.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a href="tel:+48123456789" class="inline-flex items-center justify-center gap-3 bg-emerald-600 text-white px-8 py-4 rounded-full hover:bg-emerald-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            +48 123 456 789
          </a>
          <a href="mailto:kontakt@marianowak.pl" class="inline-flex items-center justify-center gap-3 bg-white/10 text-white px-8 py-4 rounded-full hover:bg-white/20 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            kontakt@marianowak.pl
          </a>
        </div>

        <p class="text-stone-400 text-sm">
          Odpowiadam na wiadomości w ciągu 24 godzin w dni robocze
        </p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-6 md:px-12 bg-stone-100">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-4 gap-8 mb-8">
          <div class="md:col-span-2">
            <h3 class="font-medium text-stone-900 mb-2">Maria Nowak</h3>
            <p class="text-sm text-stone-600 mb-4">
              Certyfikowany psychoterapeuta poznawczo-behawioralny. 
              Członek Polskiego Towarzystwa Psychoterapeutycznego.
            </p>
          </div>
          
          <div>
            <h4 class="font-medium text-stone-900 mb-3">Przydatne linki</h4>
            <ul class="space-y-2 text-sm text-stone-600">
              <li><a href="#" class="hover:text-stone-900">Polityka prywatności</a></li>
              <li><a href="#" class="hover:text-stone-900">Regulamin</a></li>
              <li><a href="#" class="hover:text-stone-900">FAQ</a></li>
            </ul>
          </div>
          
          <div>
            <h4 class="font-medium text-stone-900 mb-3">Kontakt</h4>
            <ul class="space-y-2 text-sm text-stone-600">
              <li>ul. Puławska 108, Warszawa</li>
              <li>+48 123 456 789</li>
              <li>kontakt@marianowak.pl</li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-stone-200 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-stone-600">
            © 2024 Maria Nowak. Wszystkie prawa zastrzeżone.
          </p>
