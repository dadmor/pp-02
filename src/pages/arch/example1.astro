---
// src/pages/index.astro
import '../../styles/global.css';

const editorialSections = [
  { issue: "01", title: "The Mind Issue" },
  { issue: "02", title: "The Body Issue" },
  { issue: "03", title: "The Soul Issue" },
  { issue: "04", title: "The Connection Issue" }
];

const articles = [
  {
    category: "COVER STORY",
    title: "Rewolucja wewnętrzna",
    subtitle: "Jak terapia zmienia mózg",
    author: "Maria Nowak",
    readTime: "12 min"
  },
  {
    category: "FEATURE",
    title: "Ciało pamięta",
    subtitle: "Trauma zapisana w ciele",
    author: "Maria Nowak",
    readTime: "8 min"
  },
  {
    category: "ESSAY",
    title: "Sztuka obecności",
    subtitle: "O byciu tu i teraz",
    author: "Maria Nowak",
    readTime: "6 min"
  }
];
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>NOWAK — The Therapy Journal</title>
    <meta name="description" content="Where psychology meets soul. A different approach to therapy.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Didot&family=Futura&family=Helvetica+Neue&display=swap" rel="stylesheet">
    <style>
      @font-face {
        font-family: 'Editorial';
        src: local('Didot'), local('Bodoni MT'), local('Georgia'), serif;
      }
      @font-face {
        font-family: 'Sans';
        src: local('Futura'), local('Helvetica Neue'), local('Arial'), sans-serif;
      }
    </style>
  </head>
  <body class="bg-white text-black overflow-x-hidden">
    
    <!-- Magazine Header -->
    <header class="fixed top-0 w-full z-50 bg-white border-b-[3px] border-black">
      <div class="px-6 lg:px-12 py-3">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <div class="flex items-baseline gap-2">
            <h1 class="text-4xl lg:text-5xl font-serif tracking-tight">NOWAK</h1>
            <span class="text-xs tracking-[0.2em]">EST. 2009</span>
          </div>
          
          <!-- Tagline -->
          <p class="hidden md:block text-xs tracking-[0.3em] uppercase">
            The Therapy Journal
          </p>
          
          <!-- Subscribe -->
          <button class="text-xs tracking-[0.2em] uppercase border border-black px-4 py-2 hover:bg-black hover:text-white transition-all">
            Book Session
          </button>
        </div>
      </div>
    </header>

    <!-- Hero Cover -->
    <section class="min-h-screen flex items-center relative mt-20 px-6 lg:px-12">
      <!-- Cover Lines -->
      <div class="w-full">
        <div class="max-w-7xl mx-auto">
          <!-- Issue Info -->
          <div class="flex items-baseline gap-4 mb-8">
            <span class="text-sm tracking-[0.3em]">ISSUE 127</span>
            <span class="text-sm">WARSAW</span>
            <span class="text-sm">WINTER 2024</span>
          </div>
          
          <!-- Main Headline -->
          <h2 class="font-serif text-6xl lg:text-8xl xl:text-9xl leading-[0.8] mb-6">
            THE<br/>
            INNER<br/>
            <span class="italic">Revolution</span>
          </h2>
          
          <!-- Subtitle -->
          <p class="text-xl lg:text-2xl font-light max-w-2xl mb-12">
            Odkrywanie siły w vulnerabilności. Jak współczesna psychoterapia 
            zmienia nasze rozumienie zdrowia psychicznego.
          </p>
          
          <!-- Credits -->
          <div class="flex flex-wrap gap-8 text-sm">
            <div>
              <p class="text-gray-500">Photography</p>
              <p>ANNA KOWALSKA</p>
            </div>
            <div>
              <p class="text-gray-500">Words</p>
              <p>MARIA NOWAK</p>
            </div>
            <div>
              <p class="text-gray-500">Art Direction</p>
              <p>STUDIO THERAPY</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Editor's Letter -->
    <section class="py-24 px-6 lg:px-12">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 lg:gap-16">
          <!-- Letter -->
          <div class="col-span-12 lg:col-span-7">
            <p class="text-sm tracking-[0.3em] mb-8">EDITOR'S LETTER</p>
            
            <h3 class="font-serif text-5xl lg:text-6xl mb-8 leading-tight">
              Droga<br/>Czytelniczko
            </h3>
            
            <div class="prose prose-lg max-w-none">
              <p class="first-letter:text-7xl first-letter:font-serif first-letter:float-left first-letter:mr-3 first-letter:mt-1">
                Witam Cię w przestrzeni, gdzie psychologia spotyka się z duszą. 
                Jako psychoterapeutka z 15-letnim doświadczeniem, stworzyłam 
                to miejsce dla osób, które szukają czegoś więcej niż tylko 
                rozwiązania problemów.
              </p>
              
              <p class="mt-6">
                W mojej praktyce łączę klasyczne podejścia terapeutyczne 
                z głębokim zrozumieniem ludzkiej natury. Wierzę, że każdy 
                z nas jest bohaterem własnej historii — czasem potrzebujemy 
                tylko pomocy w napisaniu kolejnego rozdziału.
              </p>
              
              <p class="mt-6">
                Zapraszam Cię do odkrycia, jak terapia może stać się 
                najważniejszą podróżą Twojego życia.
              </p>
              
              <div class="mt-12">
                <img src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=200&h=80&fit=crop" alt="Signature" class="h-16" />
                <p class="mt-4 text-sm">
                  <strong>Maria Nowak</strong><br/>
                  Founder & Lead Therapist
                </p>
              </div>
            </div>
          </div>
          
          <!-- Portrait -->
          <div class="col-span-12 lg:col-span-5">
            <div class="relative">
              <img 
                src="https://images.unsplash.com/photo-1594824476967-48c8b964273f?w=500&h=700&fit=crop"
                alt="Maria Nowak"
                class="w-full"
              />
              <div class="absolute -bottom-4 -right-4 bg-black text-white p-6">
                <p class="font-serif text-6xl">15</p>
                <p class="text-xs tracking-[0.2em]">YEARS OF PRACTICE</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Table of Contents -->
    <section class="py-24 px-6 lg:px-12 bg-black text-white">
      <div class="max-w-7xl mx-auto">
        <h3 class="text-sm tracking-[0.3em] mb-12">THIS ISSUE</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {editorialSections.map((section) => (
            <div class="border-t border-white/30 pt-6">
              <p class="text-5xl font-serif mb-4">{section.issue}</p>
              <h4 class="text-lg mb-2">{section.title}</h4>
              <a href="#" class="text-sm underline hover:no-underline">Read More →</a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Feature Spread -->
    <section class="py-24">
      <div class="max-w-screen-2xl mx-auto">
        <div class="grid grid-cols-12">
          <!-- Left Page -->
          <div class="col-span-12 lg:col-span-6 p-6 lg:p-12">
            <p class="text-sm tracking-[0.3em] mb-8">THE PRACTICE</p>
            
            <h3 class="font-serif text-6xl lg:text-7xl mb-8 leading-[0.9]">
              Trzy<br/>
              <span class="italic">podejścia,</span><br/>
              jedna wizja
            </h3>
            
            <div class="space-y-12 mt-16">
              <div>
                <h4 class="text-2xl font-serif mb-4">01. Psychodynamiczna</h4>
                <p class="text-gray-600">
                  Odkrywamy nieświadome wzorce, które kierują Twoim życiem. 
                  To jak archeologia duszy — warstwa po warstwie docieramy 
                  do sedna.
                </p>
              </div>
              
              <div>
                <h4 class="text-2xl font-serif mb-4">02. Poznawczo-behawioralna</h4>
                <p class="text-gray-600">
                  Pracujemy z myślami i zachowaniami tu i teraz. Praktyczne 
                  narzędzia, które możesz zastosować od razu.
                </p>
              </div>
              
              <div>
                <h4 class="text-2xl font-serif mb-4">03. Somatyczna</h4>
                <p class="text-gray-600">
                  Ciało pamięta wszystko. Uczymy się słuchać jego mądrości 
                  i uwalniać to, co zostało zatrzymane.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Right Page -->
          <div class="col-span-12 lg:col-span-6 bg-gray-100 p-6 lg:p-12 flex items-end">
            <div class="w-full">
              <div class="mb-12">
                <p class="text-sm tracking-[0.3em] mb-4">PHILOSOPHY</p>
                <h4 class="font-serif text-4xl lg:text-5xl leading-tight">
                  "Nie chodzi o to, by pozbyć się wszystkich problemów, 
                  ale by nauczyć się z nimi żyć w sposób, który nie 
                  odbiera nam radości."
                </h4>
              </div>
              <div class="bg-white p-6">
                <p class="text-sm mb-2">INVESTMENT IN YOURSELF</p>
                <p class="font-serif text-3xl">200-300 PLN</p>
                <p class="text-sm text-gray-600 mt-2">per session</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Articles Grid -->
    <section class="py-24 px-6 lg:px-12 bg-gray-50">
      <div class="max-w-7xl mx-auto">
        <h3 class="text-sm tracking-[0.3em] mb-12">FEATURES</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {articles.map((article, index) => (
            <article class="group cursor-pointer">
              <div class="aspect-[3/4] bg-gradient-to-b from-gray-100 to-gray-200 mb-6 flex items-center justify-center">
                <p class="font-serif text-9xl text-gray-300">{(index + 1).toString().padStart(2, '0')}</p>
              </div>
              <p class="text-xs tracking-[0.2em] text-gray-500 mb-2">{article.category}</p>
              <h4 class="font-serif text-2xl mb-2">{article.title}</h4>
              <p class="text-gray-600 mb-4">{article.subtitle}</p>
              <div class="flex justify-between text-xs text-gray-500">
                <span>By {article.author}</span>
                <span>{article.readTime} read</span>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Fashion-style Service Showcase -->
    <section class="py-24">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <!-- Individual Therapy -->
        <div class="h-[60vh] lg:h-screen bg-gray-100 flex items-center justify-center p-12">
          <div class="text-center">
            <p class="text-sm tracking-[0.3em] mb-4">01</p>
            <h3 class="font-serif text-5xl lg:text-6xl mb-4">Individual</h3>
            <p class="text-lg font-light mb-8">Przestrzeń tylko dla Ciebie</p>
            <div class="max-w-sm mx-auto text-sm text-gray-600">
              <p>50 minut sesji</p>
              <p>200-250 PLN</p>
              <p class="mt-4">Praca z lękiem, depresją, traumą, kryzysami życiowymi</p>
            </div>
          </div>
        </div>
        
        <!-- Couples Therapy -->
        <div class="h-[60vh] lg:h-screen bg-gray-900 text-white flex items-center justify-center p-12">
          <div class="text-center">
            <p class="text-sm tracking-[0.3em] mb-4">02</p>
            <h3 class="font-serif text-5xl lg:text-6xl mb-4">Couples</h3>
            <p class="text-lg font-light mb-8">Odbudowanie więzi</p>
            <div class="max-w-sm mx-auto text-sm text-gray-300">
              <p>80 minut sesji</p>
              <p>300-350 PLN</p>
              <p class="mt-4">Komunikacja, intymność, odbudowa zaufania</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Space -->
    <section class="py-24 px-6 lg:px-12">
      <div class="max-w-screen-2xl mx-auto">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-4">
            <p class="text-sm tracking-[0.3em] mb-8">THE SPACE</p>
            <h3 class="font-serif text-5xl mb-8">
              Where<br/>
              <span class="italic">healing</span><br/>
              happens
            </h3>
            <p class="text-gray-600 mb-8">
              Gabinet w sercu Warszawy, zaprojektowany jako sanktuarium 
              dla duszy. Przestrzeń, która oddycha spokojem.
            </p>
            <div class="space-y-4 text-sm">
              <p><strong>Address</strong><br/>Mokotowska 27, Warsaw</p>
              <p><strong>Hours</strong><br/>By appointment only</p>
              <p><strong>Contact</strong><br/>+48 123 456 789</p>
            </div>
          </div>
          
          <div class="col-span-12 lg:col-span-8">
            <div class="grid grid-cols-2 gap-4 h-full">
              <div class="bg-gray-100 p-12 flex items-center justify-center">
                <div class="text-center">
                  <p class="font-serif text-6xl text-gray-300 mb-4">01</p>
                  <p class="text-sm tracking-[0.2em]">CONSULTATION ROOM</p>
                </div>
              </div>
              <div class="bg-gray-200 p-12 flex items-center justify-center">
                <div class="text-center">
                  <p class="font-serif text-6xl text-gray-400 mb-4">02</p>
                  <p class="text-sm tracking-[0.2em]">WAITING AREA</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Subscribe/Contact -->
    <section class="bg-black text-white py-24 px-6 lg:px-12">
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="font-serif text-6xl lg:text-7xl mb-8">
          Begin your<br/>
          <span class="italic">journey</span>
        </h3>
        
        <p class="text-xl font-light mb-12 max-w-2xl mx-auto">
          Pierwsza konsultacja gratis. Odkryj, jak terapia może zmienić 
          Twoje życie w dzieło sztuki.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+48123456789" class="border border-white px-8 py-4 hover:bg-white hover:text-black transition-all">
            CALL NOW
          </a>
          <a href="mailto:therapy@marianowak.pl" class="border border-white px-8 py-4 hover:bg-white hover:text-black transition-all">
            WRITE TO US
          </a>
        </div>
        
        <div class="mt-24 pt-24 border-t border-white/20">
          <p class="text-xs tracking-[0.3em] mb-4">FOLLOW THE JOURNEY</p>
          <div class="flex justify-center gap-8 text-sm">
            <a href="#" class="hover:underline">Instagram</a>
            <a href="#" class="hover:underline">LinkedIn</a>
            <a href="#" class="hover:underline">Newsletter</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Magazine Footer -->
    <footer class="py-8 px-6 lg:px-12 border-t-[3px] border-black">
      <div class="max-w-7xl mx-auto flex flex-wrap justify-between items-center gap-4">
        <p class="font-serif text-2xl">NOWAK</p>
        <p class="text-xs tracking-[0.2em]">
          THE THERAPY JOURNAL © 2024 ALL RIGHTS RESERVED
        </p>
        <p class="text-xs">
          PUBLISHED BY INNER REVOLUTION PRESS
        </p>
      </div>
    </footer>

    <style>
      body {
        font-family: 'Helvetica Neue', Arial, sans-serif;
      }
      
      .font-serif {
        font-family: 'Didot', 'Bodoni MT', Georgia, serif;
        font-weight: 300;
      }

      /* Magazine-style first letter */
      .first-letter\:text-7xl:first-letter {
        font-size: 4.5rem;
        line-height: 1;
        font-family: 'Didot', 'Bodoni MT', Georgia, serif;
      }

      /* High contrast */
      img {
        filter: contrast(1.1);
      }
    </style>

    <script>
      // Parallax on scroll
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const parallax = document.querySelectorAll('.parallax');
        parallax.forEach(element => {
          const speed = element.dataset.speed || 0.5;
          element.style.transform = `translateY(${scrolled * speed}px)`;
        });
      });
    </script>
  </body>
</html>