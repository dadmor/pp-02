---
// src/pages/index.astro
import '../../styles/global.css';

const menuItems = [
  { 
    href: "#essence", 
    label: "Istota",
    subtitle: "Philosophy" 
  },
  { 
    href: "#journey", 
    label: "Droga",
    subtitle: "Process" 
  },
  { 
    href: "#space", 
    label: "Przestrzeń",
    subtitle: "Practice" 
  },
  { 
    href: "#wisdom", 
    label: "Mądrość",
    subtitle: "Insights" 
  },
  { 
    href: "#connection", 
    label: "Połączenie",
    subtitle: "Contact" 
  }
];

const therapyPaths = [
  {
    roman: "I",
    title: "Terapia Indywidualna",
    subtitle: "The Journey Within",
    description: "Kiedy potrzebujesz przestrzeni tylko dla siebie",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800&h=1000&fit=crop",
    details: {
      time: "50 minut",
      investment: "200-250 PLN",
      format: "W gabinecie lub online"
    },
    areas: [
      "Lęk i niepokój",
      "Depresja",
      "Trauma",
      "Kryzys życiowy"
    ]
  },
  {
    roman: "II", 
    title: "Terapia Par",
    subtitle: "Two Worlds Meeting",
    description: "Gdy związek potrzebuje nowego spojrzenia",
    image: "https://images.unsplash.com/photo-1601758123927-4f7acc7c1177?w=800&h=1000&fit=crop",
    details: {
      time: "80 minut",
      investment: "300-350 PLN", 
      format: "Tylko w gabinecie"
    },
    areas: [
      "Komunikacja",
      "Odbudowa zaufania",
      "Intymność",
      "Wspólna wizja"
    ]
  },
  {
    roman: "III",
    title: "Grupy Rozwojowe", 
    subtitle: "Collective Wisdom",
    description: "Moc wspólnego doświadczenia",
    image: "https://images.unsplash.com/photo-1609234656388-0ff363383899?w=800&h=1000&fit=crop",
    details: {
      time: "2 godziny",
      investment: "80 PLN/spotkanie",
      format: "Cykle 8-tygodniowe"
    },
    areas: [
      "Mindfulness MBSR",
      "Grupa wsparcia",
      "Warsztat asertywności", 
      "Regulacja emocji"
    ]
  }
];

const wisdomPieces = [
  {
    type: "Reflection",
    title: "O sztuce przyjmowania",
    excerpt: "Największym paradoksem terapii jest to, że zmiana następuje wtedy, gdy przestajemy z nią walczyć.",
    readTime: "5 min"
  },
  {
    type: "Essay",
    title: "Cisza między słowami",
    excerpt: "To, co niewypowiedziane, często mówi więcej niż tysiąc słów. O przestrzeni milczenia w terapii.",
    readTime: "8 min"
  },
  {
    type: "Story",
    title: "Metafora mostu",
    excerpt: "Jak pewna klientka nauczyła mnie, że czasem najważniejsze jest zbudowanie mostu do samego siebie.",
    readTime: "6 min"
  }
];
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Maria Nowak • Psychoterapia • Warszawa</title>
    <meta name="description" content="Przestrzeń terapeutyczna dla osób poszukujących głębszego zrozumienia siebie. Gabinet w Warszawie.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,700;1,400;1,500&family=Karla:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-neutral-50 text-neutral-900 selection:bg-rose-100 selection:text-rose-900">
    
    <!-- Artistic Grid Pattern -->
    <div class="fixed inset-0 pointer-events-none opacity-[0.02] z-0">
      <svg width="100%" height="100%">
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="1"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>

    <!-- Navigation - Museum Style -->
    <nav class="fixed top-0 w-full z-50 bg-gradient-to-b from-neutral-50 via-neutral-50/95 to-transparent">
      <div class="max-w-screen-2xl mx-auto px-8 lg:px-16">
        <div class="flex justify-between items-start py-8">
          <!-- Logo -->
          <div>
            <h1 class="text-2xl tracking-[0.3em] font-light">MARIA NOWAK</h1>
            <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">PSYCHOTHERAPIST • WARSAW</p>
          </div>
          
          <!-- Menu -->
          <div class="hidden lg:flex gap-12">
            {menuItems.map((item) => (
              <a href={item.href} class="group text-center">
                <span class="block text-sm tracking-wider text-neutral-700 group-hover:text-rose-700 transition-colors">
                  {item.label}
                </span>
                <span class="block text-xs tracking-wider text-neutral-400 mt-1">
                  {item.subtitle}
                </span>
              </a>
            ))}
          </div>

          <!-- Language Toggle -->
          <div class="flex items-center gap-2 text-xs tracking-wider">
            <button class="text-neutral-900">PL</button>
            <span class="text-neutral-300">/</span>
            <button class="text-neutral-400 hover:text-neutral-900 transition-colors">EN</button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero - Gallery Opening Style -->
    <section class="min-h-screen flex items-center px-8 lg:px-16 relative">
      <div class="max-w-screen-2xl mx-auto w-full pt-32">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-7">
            <!-- Exhibition Title Style -->
            <div class="mb-12">
              <p class="text-rose-700 tracking-[0.3em] text-xs mb-4">SINCE MMIX</p>
              <h2 class="font-serif text-7xl lg:text-8xl xl:text-9xl leading-[0.85] tracking-tight">
                Przestrzeń<br/>
                <em class="font-normal text-rose-700">spotkania</em><br/>
                z&nbsp;sobą
              </h2>
            </div>

            <!-- Curator's Note -->
            <div class="max-w-xl">
              <p class="text-lg leading-relaxed text-neutral-600 mb-8">
                W mojej praktyce terapeutycznej tworzę bezpieczną przestrzeń, 
                gdzie możesz odkryć swoją autentyczną naturę i znaleźć drogę 
                do wewnętrznej harmonii.
              </p>
              
              <!-- Gallery Hours -->
              <div class="flex gap-16 text-sm">
                <div>
                  <p class="text-neutral-400 tracking-wider mb-1">LATA PRAKTYKI</p>
                  <p class="text-2xl font-light">15+</p>
                </div>
                <div>
                  <p class="text-neutral-400 tracking-wider mb-1">UKOŃCZONYCH TERAPII</p>
                  <p class="text-2xl font-light">500+</p>
                </div>
                <div>
                  <p class="text-neutral-400 tracking-wider mb-1">SATYSFAKCJA</p>
                  <p class="text-2xl font-light">98%</p>
                </div>
              </div>
            </div>

            <!-- Opening Hours CTA -->
            <div class="mt-16 flex gap-6">
              <a href="#connection" class="group relative overflow-hidden border border-neutral-900 px-8 py-4">
                <span class="relative z-10 text-sm tracking-wider">UMÓW WIZYTĘ</span>
                <div class="absolute inset-0 bg-neutral-900 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500"></div>
                <span class="absolute inset-0 flex items-center justify-center text-white text-sm tracking-wider transform -translate-y-full group-hover:translate-y-0 transition-transform duration-500">
                  UMÓW WIZYTĘ
                </span>
              </a>
              <a href="#essence" class="px-8 py-4 text-sm tracking-wider text-neutral-600 hover:text-neutral-900 transition-colors">
                DOWIEDZ SIĘ WIĘCEJ
              </a>
            </div>
          </div>

          <!-- Hero Image - Portrait Style -->
          <div class="col-span-12 lg:col-span-5 relative">
            <div class="aspect-[3/4] relative overflow-hidden">
              <img 
                src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=600&h=800&fit=crop"
                alt="Maria Nowak"
                class="w-full h-full object-cover filter grayscale-[30%]"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/20 to-transparent"></div>
            </div>
            <!-- Image Caption -->
            <p class="text-xs text-neutral-400 mt-4 text-right">
              Portrait by Anna K., 2024
            </p>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-8 lg:left-16">
        <p class="text-xs tracking-[0.3em] text-neutral-400 -rotate-90 origin-left">SCROLL TO EXPLORE</p>
      </div>
    </section>

    <!-- Essence/Philosophy - Museum Wall Style -->
    <section id="essence" class="py-32 px-8 lg:px-16 bg-white">
      <div class="max-w-screen-2xl mx-auto">
        <!-- Section Label -->
        <div class="flex items-center gap-8 mb-16">
          <span class="text-5xl font-light text-neutral-200">01</span>
          <div>
            <h3 class="text-2xl tracking-[0.3em] font-light">ISTOTA</h3>
            <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">THE ESSENCE OF THERAPY</p>
          </div>
        </div>

        <!-- Philosophy Grid -->
        <div class="grid grid-cols-12 gap-8 lg:gap-16">
          <div class="col-span-12 lg:col-span-7">
            <p class="font-serif text-4xl lg:text-5xl leading-tight mb-12">
              „Terapia to nie naprawa tego, co zepsute,<br/>
              ale <em class="text-rose-700">odkrywanie</em> tego,<br/>
              co zawsze było całe."
            </p>
            
            <div class="prose prose-lg max-w-none">
              <p class="text-neutral-600 leading-relaxed mb-6">
                W swojej pracy łączę współczesne metody psychoterapeutyczne 
                z głębokim szacunkiem dla mądrości, którą każdy człowiek nosi 
                w sobie. Wierzę, że prawdziwe uzdrowienie przychodzi poprzez 
                zrozumienie, nie osąd.
              </p>
              <p class="text-neutral-600 leading-relaxed">
                Moje podejście opiera się na terapii poznawczo-behawioralnej, 
                wzbogaconej o elementy mindfulness i pracy z ciałem. Każda 
                podróż terapeutyczna jest unikalna, kształtowana przez Twoje 
                potrzeby i tempo.
              </p>
            </div>
          </div>

          <!-- Three Pillars -->
          <div class="col-span-12 lg:col-span-5">
            <div class="space-y-12">
              <div class="text-center">
                <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-rose-50 to-neutral-50 flex items-center justify-center">
                  <span class="text-4xl">🌱</span>
                </div>
                <h4 class="text-xl tracking-wider mb-2">WZROST</h4>
                <p class="text-sm text-neutral-600">Każdy kryzys niesie potencjał transformacji</p>
              </div>
              
              <div class="text-center">
                <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-rose-50 to-neutral-50 flex items-center justify-center">
                  <span class="text-4xl">🤝</span>
                </div>
                <h4 class="text-xl tracking-wider mb-2">RELACJA</h4>
                <p class="text-sm text-neutral-600">Uzdrowienie dzieje się w bezpiecznej więzi</p>
              </div>
              
              <div class="text-center">
                <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-rose-50 to-neutral-50 flex items-center justify-center">
                  <span class="text-4xl">💎</span>
                </div>
                <h4 class="text-xl tracking-wider mb-2">AUTENTYCZNOŚĆ</h4>
                <p class="text-sm text-neutral-600">Odkrywanie prawdziwego siebie</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Journey/Services - Exhibition Rooms -->
    <section id="journey" class="py-32 px-8 lg:px-16">
      <div class="max-w-screen-2xl mx-auto">
        <!-- Section Label -->
        <div class="flex items-center gap-8 mb-16">
          <span class="text-5xl font-light text-neutral-200">02</span>
          <div>
            <h3 class="text-2xl tracking-[0.3em] font-light">DROGA</h3>
            <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">THERAPEUTIC PATHS</p>
          </div>
        </div>

        <!-- Exhibition Notice -->
        <div class="text-center mb-24">
          <p class="font-serif text-3xl lg:text-4xl text-neutral-700">
            Każda ścieżka prowadzi do tego samego celu —<br/>
            <em class="text-rose-700">wewnętrznego spokoju</em>
          </p>
        </div>

        <!-- Services as Exhibition Pieces -->
        <div class="space-y-32">
          {therapyPaths.map((path, index) => (
            <div class="grid grid-cols-12 gap-8 lg:gap-16 items-center">
              {/* Image */}
              <div class={`col-span-12 lg:col-span-5 ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                <div class="relative">
                  <img 
                    src={path.image}
                    alt={path.title}
                    class="w-full aspect-[4/5] object-cover"
                  />
                  <div class="absolute top-8 left-8 bg-white/90 backdrop-blur-sm px-4 py-2">
                    <p class="text-3xl font-light">{path.roman}</p>
                  </div>
                </div>
              </div>

              {/* Content */}
              <div class={`col-span-12 lg:col-span-7 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
                <div class="mb-8">
                  <h4 class="text-3xl lg:text-4xl tracking-wide mb-2">{path.title}</h4>
                  <p class="text-sm tracking-[0.2em] text-neutral-400">{path.subtitle}</p>
                </div>

                <p class="text-xl text-neutral-600 mb-8">
                  {path.description}
                </p>

                <div class="grid grid-cols-2 gap-8 mb-8">
                  <div>
                    <p class="text-xs tracking-[0.2em] text-neutral-400 mb-2">OBSZARY PRACY</p>
                    <ul class="space-y-2">
                      {path.areas.map((area) => (
                        <li class="flex items-center gap-2 text-sm">
                          <span class="w-1 h-1 bg-rose-700 rounded-full"></span>
                          {area}
                        </li>
                      ))}
                    </ul>
                  </div>
                  <div>
                    <p class="text-xs tracking-[0.2em] text-neutral-400 mb-4">INFORMACJE PRAKTYCZNE</p>
                    <dl class="space-y-2 text-sm">
                      <div>
                        <dt class="text-neutral-400 inline">Czas trwania: </dt>
                        <dd class="inline">{path.details.time}</dd>
                      </div>
                      <div>
                        <dt class="text-neutral-400 inline">Inwestycja: </dt>
                        <dd class="inline">{path.details.investment}</dd>
                      </div>
                      <div>
                        <dt class="text-neutral-400 inline">Format: </dt>
                        <dd class="inline">{path.details.format}</dd>
                      </div>
                    </dl>
                  </div>
                </div>

                <a href="#connection" class="inline-flex items-center gap-3 text-sm tracking-wider hover:gap-5 transition-all">
                  DOWIEDZ SIĘ WIĘCEJ
                  <span>→</span>
                </a>
              </div>
            </div>
          ))}
        </div>

        <!-- Free Consultation Banner -->
        <div class="mt-32 text-center py-16 bg-gradient-to-r from-rose-50 to-neutral-50">
          <p class="text-xs tracking-[0.3em] text-neutral-600 mb-4">PIERWSZE SPOTKANIE</p>
          <p class="font-serif text-3xl mb-8">Konsultacja wstępna jest bezpłatna</p>
          <a href="#connection" class="inline-block border border-neutral-900 px-12 py-4 text-sm tracking-wider hover:bg-neutral-900 hover:text-white transition-all">
            ZAREZERWUJ TERMIN
          </a>
        </div>
      </div>
    </section>

    <!-- Space/About - Artist Statement -->
    <section id="space" class="py-32 px-8 lg:px-16 bg-white">
      <div class="max-w-screen-2xl mx-auto">
        <!-- Section Label -->
        <div class="flex items-center gap-8 mb-16">
          <span class="text-5xl font-light text-neutral-200">03</span>
          <div>
            <h3 class="text-2xl tracking-[0.3em] font-light">PRZESTRZEŃ</h3>
            <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">THE THERAPEUTIC SPACE</p>
          </div>
        </div>

        <div class="grid grid-cols-12 gap-8 lg:gap-16">
          <!-- About Text -->
          <div class="col-span-12 lg:col-span-6">
            <h4 class="font-serif text-4xl lg:text-5xl mb-8">Maria Nowak</h4>
            
            <div class="prose prose-lg">
              <p class="text-neutral-600 mb-6">
                Od piętnastu lat towarzyszę ludziom w ich wewnętrznych podróżach. 
                Każde spotkanie to dla mnie przywilej bycia świadkiem ludzkiej 
                odwagi i transformacji.
              </p>
              <p class="text-neutral-600 mb-6">
                Ukończyłam psychologię kliniczną na Uniwersytecie Warszawskim, 
                następnie odbyłam czteroletnie szkolenie w Szkole Psychoterapii PTP. 
                Regularnie uczestniczę w superwizjach i warsztatach, wierząc że 
                rozwój terapeuty nigdy się nie kończy.
              </p>
              <p class="text-neutral-600 mb-8">
                Poza gabinetem znajduję inspirację w sztuce, literaturze i kontakcie 
                z naturą. Te pasje uczą mnie pokory wobec złożoności ludzkiego 
                doświadczenia.
              </p>
            </div>

            <!-- Credentials -->
            <div class="grid grid-cols-2 gap-6 py-8 border-t border-neutral-200">
              <div>
                <p class="text-xs tracking-[0.2em] text-neutral-400 mb-2">EDUKACJA</p>
                <p class="text-sm">Uniwersytet Warszawski<br/>Psychologia Kliniczna</p>
              </div>
              <div>
                <p class="text-xs tracking-[0.2em] text-neutral-400 mb-2">CERTYFIKAT</p>
                <p class="text-sm">Polskie Towarzystwo<br/>Psychoterapeutyczne</p>
              </div>
            </div>
          </div>

          <!-- Space Images -->
          <div class="col-span-12 lg:col-span-6">
            <div class="grid grid-cols-2 gap-4">
              <img 
                src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=400&h=500&fit=crop"
                alt="Gabinet"
                class="w-full h-full object-cover"
              />
              <img 
                src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=400&h=500&fit=crop"
                alt="Przestrzeń terapeutyczna"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="mt-8 p-6 bg-neutral-50">
              <p class="text-xs tracking-[0.2em] text-neutral-400 mb-3">LOKALIZACJA</p>
              <address class="not-italic text-sm">
                ul. Mokotowska 27/3<br/>
                00-560 Warszawa<br/>
                Metro Politechnika (5 min)
              </address>
              <p class="text-xs text-neutral-400 mt-4">
                Przestrzeń zaprojektowana dla Twojego komfortu i prywatności
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Wisdom/Insights - Reading Room -->
    <section id="wisdom" class="py-32 px-8 lg:px-16">
      <div class="max-w-screen-2xl mx-auto">
        <!-- Section Label -->
        <div class="flex items-center gap-8 mb-16">
          <span class="text-5xl font-light text-neutral-200">04</span>
          <div>
            <h3 class="text-2xl tracking-[0.3em] font-light">MĄDROŚĆ</h3>
            <p class="text-xs tracking-[0.2em] text-neutral-400 mt-1">REFLECTIONS & INSIGHTS</p>
          </div>
        </div>

        <!-- Introduction -->
        <div class="max-w-3xl mx-auto text-center mb-16">
          <p class="font-serif text-3xl text-neutral-700">
            Czasem słowa pomagają nam zrozumieć to,<br/>
            co serce już wie
          </p>
        </div>

        <!-- Articles Grid -->
        <div class="grid grid-cols-12 gap-8">
          {wisdomPieces.map((piece, index) => (
            <article class="col-span-12 md:col-span-4 group">
              <div class="h-full border border-neutral-200 p-8 hover:border-rose-300 transition-colors">
                <p class="text-xs tracking-[0.3em] text-rose-700 mb-4">
                  {piece.type.toUpperCase()}
                </p>
                <h5 class="font-serif text-2xl mb-4 group-hover:text-rose-700 transition-colors">
                  {piece.title}
                </h5>
                <p class="text-neutral-600 mb-6 leading-relaxed">
                  {piece.excerpt}
                </p>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-neutral-400">{piece.readTime} czytania</span>
                  <a href="#" class="text-sm tracking-wider hover:tracking-widest transition-all">
                    CZYTAJ →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Newsletter -->
        <div class="mt-24 max-w-2xl mx-auto text-center">
          <p class="text-xs tracking-[0.3em] text-neutral-400 mb-4">MONTHLY LETTER</p>
          <p class="font-serif text-2xl mb-8">
            Raz w miesiącu dzielę się refleksjami o procesie terapeutycznym
          </p>
          <form class="flex gap-4 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="twój@email.pl"
              class="flex-grow px-6 py-3 border border-neutral-300 focus:outline-none focus:border-rose-700 transition-colors"
            />
            <button class="px-8 py-3 bg-neutral-900 text-white hover:bg-rose-700 transition-colors">
              ZAPISZ
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Connection/Contact - Museum Info Desk -->
    <section id="connection" class="py-32 px-8 lg:px-16 bg-gradient-to-br from-rose-50 to-neutral-50">
      <div class="max-w-screen-2xl mx-auto">
        <!-- Section Label -->
        <div class="flex items-center gap-8 mb-16">
          <span class="text-5xl font-light text-white/50">05</span>
          <div>
            <h3 class="text-2xl tracking-[0.3em] font-light">POŁĄCZENIE</h3>
            <p class="text-xs tracking-[0.2em] text-neutral-600 mt-1">BEGIN YOUR JOURNEY</p>
          </div>
        </div>

