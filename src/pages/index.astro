---
// ŚCIEŻKA: src/pages/index.astro
import ThemeRenderer from '../components/ThemeRenderer.astro';
import { getContent } from '../lib/content';

const content = await getContent('pages/index');

// Jeśli content nie istnieje, użyj zapasowych danych
if (!content) {
  console.error('Failed to load content for index page');
  // Możesz przekierować na 404 lub pokazać błąd
  return Astro.redirect('/404');
}
---

<ThemeRenderer content={content} />