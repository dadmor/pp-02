---
// src/pages/index.astro
import HomeTemplate from '../components/templates/HomeTemplate.astro';
import therapistsData from '../data/therapists.json';
import processData from '../data/process.json';
import articlesData from '../data/articles.json';
import faqData from '../data/faq.json';

const homeData = {
  hero: {
    badge: "Dostępni terapeuci online i stacjonarnie",
    titleLine1: "Znajdź terapeutę,",
    titleLine2: "który Cię zrozumie",
    subtitle: "Łączymy osoby potrzebujące wsparcia z doświadczonymi psychoterapeutami. Każdy zasługuje na profesjonalną pomoc.",
    buttons: [
      { text: "Zacznij szukać", href: "#find", primary: true },
      { text: "Jak to działa?", href: "#how", primary: false }
    ],
    stats: [
      { value: "50+", label: "sprawdzonych terapeutów" },
      { value: "1000+", label: "przeprowadzonych sesji" },
      { value: "95%", label: "zadowolonych klientów" },
      { value: "24h", label: "średni czas odpowiedzi" }
    ]
  },
  process: processData,
  therapists: therapistsData.slice(0, 4),
  articles: articlesData,
  faqs: faqData
};
---

<HomeTemplate data={homeData} />