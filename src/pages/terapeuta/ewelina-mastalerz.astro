---
// src/pages/index.astro
import '../../styles/global.css';

const navigation = [
  { label: "Początek", sublabel: "Start" },
  { label: "Filozofia", sublabel: "Philosophy" },
  { label: "Metoda", sublabel: "Method" },
  { label: "O mnie", sublabel: "About" },
  { label: "Kontakt", sublabel: "Contact" }
];

const approaches = [
  {
    number: "01",
    title: "Psychodynamiczna",
    description: "Odkrywanie nieświadomych wzorców i wczesnych doświadczeń kształtujących obecne relacje."
  },
  {
    number: "02", 
    title: "Poznawczo-behawioralna",
    description: "Praca nad myślami i zachowaniami, które utrzymują problemy w teraźniejszości."
  },
  {
    number: "03",
    title: "Humanistyczna", 
    description: "Wspieranie naturalnego potencjału wzrostu i samoaktualizacji każdego człowieka."
  },
  {
    number: "04",
    title: "Somatyczna",
    description: "Integracja ciała i umysłu, praca z tym, co zapisane w ciele."
  }
];

const services = [
  {
    title: "Terapia indywidualna",
    duration: "50 minut",
    price: "200 PLN",
    description: "Przestrzeń tylko dla Ciebie, gdzie możesz bezpiecznie eksplorować swoje emocje i doświadczenia."
  },
  {
    title: "Terapia par",
    duration: "80 minut", 
    price: "300 PLN",
    description: "Wsparcie w budowaniu głębszej więzi i lepszej komunikacji w związku."
  },
  {
    title: "Konsultacje",
    duration: "30 minut",
    price: "bezpłatnie",
    description: "Pierwsze spotkanie, aby się poznać i omówić Twoje potrzeby."
  }
];
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Maria Nowak — Psychoterapia Integracyjna</title>
    <meta name="description" content="Psychoterapia integracyjna w Warszawie. Łączę różne podejścia, aby znaleźć najlepszą drogę dla Ciebie.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white text-neutral-900">
    
    <!-- Subtle Grid Pattern -->
    <div class="fixed inset-0 opacity-[0.015] pointer-events-none">
      <svg width="100%" height="100%">
        <defs>
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>

    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-8">
        <div class="flex justify-between items-center h-24">
          <!-- Logo -->
          <div>
            <h1 class="text-sm tracking-[0.2em] font-medium">MARIA NOWAK</h1>
            <p class="text-[10px] tracking-[0.15em] text-neutral-400 mt-1">Psychoterapia Integracyjna</p>
          </div>

          <!-- Menu -->
          <div class="hidden md:flex items-center gap-12">
            {navigation.map((item) => (
              <a href="#" class="group text-center">
                <span class="block text-sm text-neutral-700 group-hover:text-neutral-900 transition-colors">
                  {item.label}
                </span>
                <span class="block text-[10px] text-neutral-400 mt-0.5">
                  {item.sublabel}
                </span>
              </a>
            ))}
          </div>

          <!-- Contact -->
          <div class="text-right">
            <p class="text-sm text-neutral-700">+48 123 456 789</p>
            <p class="text-[10px] text-neutral-400">Pon-Pt 9:00-19:00</p>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <section class="min-h-screen flex items-center px-8 pt-24">
      <div class="max-w-7xl mx-auto w-full">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-8">
            <!-- Main heading -->
            <h2 class="font-serif text-6xl lg:text-7xl xl:text-8xl leading-[0.9] mb-8">
              Przestrzeń dla<br/>
              <span class="italic text-neutral-600">Twojej</span> historii
            </h2>
            
            <!-- Subtitle -->
            <p class="text-xl lg:text-2xl text-neutral-600 max-w-2xl mb-12 leading-relaxed">
              Jako psychoterapeutka integracyjna, łączę różne podejścia 
              terapeutyczne, aby znaleźć najlepszą drogę wsparcia dla każdej osoby.
            </p>

            <!-- CTAs -->
            <div class="flex flex-wrap gap-4 mb-16">
              <a href="#contact" class="px-8 py-4 bg-neutral-900 text-white hover:bg-neutral-800 transition-colors">
                Umów konsultację
              </a>
              <a href="#philosophy" class="px-8 py-4 border border-neutral-300 hover:border-neutral-900 transition-colors">
                Dowiedz się więcej
              </a>
            </div>

            <!-- Stats -->
            <div class="flex gap-16">
              <div>
                <p class="text-3xl font-light">15+</p>
                <p class="text-sm text-neutral-500">lat praktyki</p>
              </div>
              <div>
                <p class="text-3xl font-light">4</p>
                <p class="text-sm text-neutral-500">nurty terapeutyczne</p>
              </div>
              <div>
                <p class="text-3xl font-light">500+</p>
                <p class="text-sm text-neutral-500">ukończonych terapii</p>
              </div>
            </div>
          </div>

          <!-- Hero image -->
          <div class="col-span-12 lg:col-span-4">
            <div class="relative">
              <img 
                src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?w=400&h=500&fit=crop"
                alt="Maria Nowak"
                class="w-full rounded-sm"
              />
              <div class="absolute -bottom-4 -right-4 bg-neutral-100 p-6">
                <p class="text-xs text-neutral-500">Certyfikowany psychoterapeuta</p>
                <p class="text-sm font-medium">PTP nr 1234</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Philosophy -->
    <section id="philosophy" class="py-24 px-8 bg-neutral-50">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-16">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">FILOZOFIA</p>
          </div>
          <div class="col-span-12 lg:col-span-8">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8 leading-tight">
              Każdy człowiek jest unikalny, dlatego potrzebuje 
              <span class="italic">indywidualnego</span> podejścia
            </h3>
            <p class="text-lg text-neutral-600 leading-relaxed">
              W mojej praktyce integruję różne podejścia terapeutyczne — od psychodynamiki 
              przez terapię poznawczo-behawioralną, po pracę z ciałem. Wierzę, że nie ma 
              jednej metody odpowiedniej dla wszystkich. Dlatego dostosowuję sposób pracy 
              do Twoich potrzeb, temperamentu i celów.
            </p>
          </div>
        </div>

        <!-- Approaches grid -->
        <div class="grid grid-cols-12 gap-8">
          {approaches.map((approach) => (
            <div class="col-span-12 md:col-span-6 lg:col-span-3">
              <div class="h-full border-t border-neutral-300 pt-6">
                <p class="text-2xl text-neutral-300 mb-4">{approach.number}</p>
                <h4 class="text-lg font-medium mb-3">{approach.title}</h4>
                <p class="text-sm text-neutral-600 leading-relaxed">
                  {approach.description}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- Quote -->
        <div class="mt-24 text-center">
          <blockquote class="font-serif text-3xl text-neutral-700 italic">
            "Uzdrowienie nie oznacza powrotu do tego, kim byłeś.<br/>
            To odkrycie tego, kim możesz się stać."
          </blockquote>
        </div>
      </div>
    </section>

    <!-- Method/Services -->
    <section id="method" class="py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-16">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">METODA PRACY</p>
          </div>
          <div class="col-span-12 lg:col-span-6">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">
              Terapia dopasowana do Ciebie
            </h3>
            <p class="text-lg text-neutral-600">
              Oferuję różne formy wsparcia, zawsze w atmosferze 
              bezpieczeństwa i pełnej akceptacji.
            </p>
          </div>
        </div>

        <!-- Services -->
        <div class="grid grid-cols-12 gap-8">
          {services.map((service, index) => (
            <div class="col-span-12 lg:col-span-4">
              <div class="h-full bg-neutral-50 p-8">
                <h4 class="text-xl font-medium mb-4">{service.title}</h4>
                <p class="text-sm text-neutral-600 mb-6 leading-relaxed">
                  {service.description}
                </p>
                <div class="pt-6 border-t border-neutral-200">
                  <div class="flex justify-between text-sm">
                    <span class="text-neutral-500">Czas trwania</span>
                    <span>{service.duration}</span>
                  </div>
                  <div class="flex justify-between text-sm mt-2">
                    <span class="text-neutral-500">Inwestycja</span>
                    <span>{service.price}</span>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Process -->
        <div class="mt-24 max-w-4xl mx-auto">
          <h4 class="font-serif text-2xl mb-8 text-center">Jak wygląda proces terapeutyczny?</h4>
          
          <div class="space-y-8">
            <div class="flex gap-8">
              <span class="text-4xl font-light text-neutral-200">1</span>
              <div>
                <h5 class="font-medium mb-2">Poznanie</h5>
                <p class="text-sm text-neutral-600">
                  Pierwsze spotkania poświęcamy na wzajemne poznanie się i zrozumienie 
                  Twojej sytuacji. Wspólnie ustalamy cele terapii.
                </p>
              </div>
            </div>
            
            <div class="flex gap-8">
              <span class="text-4xl font-light text-neutral-200">2</span>
              <div>
                <h5 class="font-medium mb-2">Praca</h5>
                <p class="text-sm text-neutral-600">
                  Regularnie spotykamy się, aby pracować nad tym, co przyniosłeś/aś. 
                  Tempo i kierunek zawsze dostosowuję do Twoich potrzeb.
                </p>
              </div>
            </div>
            
            <div class="flex gap-8">
              <span class="text-4xl font-light text-neutral-200">3</span>
              <div>
                <h5 class="font-medium mb-2">Integracja</h5>
                <p class="text-sm text-neutral-600">
                  Pomagam Ci zintegrować nowe doświadczenia i wglądy w codzienne życie, 
                  abyś mógł/mogła żyć pełniej i autentyczniej.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About -->
    <section id="about" class="py-24 px-8 bg-neutral-50">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">O MNIE</p>
          </div>
          
          <div class="col-span-12 lg:col-span-5">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">Maria Nowak</h3>
            
            <div class="prose prose-neutral">
              <p class="text-neutral-600 mb-6">
                Jestem certyfikowaną psychoterapeutką z 15-letnim doświadczeniem. 
                Ukończyłam czteroletnie szkolenie w Instytucie Psychoterapii Integracyjnej, 
                a także liczne kursy z zakresu różnych modalności terapeutycznych.
              </p>
              
              <p class="text-neutral-600 mb-6">
                W swojej pracy kieruję się głębokim szacunkiem dla unikalności każdego 
                człowieka. Wierzę, że relacja terapeutyczna oparta na autentyczności 
                i zaufaniu jest podstawą każdej zmiany.
              </p>
              
              <p class="text-neutral-600">
                Regularnie uczestniczę w superwizjach i szkoleniach, aby móc oferować 
                najwyższą jakość wsparcia. Pracuję w języku polskim i angielskim.
              </p>
            </div>
          </div>
          
          <div class="col-span-12 lg:col-span-4 lg:col-start-9">
            <img 
              src="https://images.unsplash.com/photo-1594824476967-48c8b964273f?w=400&h=500&fit=crop"
              alt="Maria Nowak"
              class="w-full mb-8"
            />
            
            <div class="space-y-4">
              <div>
                <p class="text-xs text-neutral-500 mb-1">Wykształcenie</p>
                <p class="text-sm">Psychologia, Uniwersytet Warszawski</p>
                <p class="text-sm">Psychoterapia Integracyjna, IPI</p>
              </div>
              
              <div>
                <p class="text-xs text-neutral-500 mb-1">Certyfikaty</p>
                <p class="text-sm">Polskie Towarzystwo Psychoterapeutyczne</p>
                <p class="text-sm">EMDR Europe</p>
              </div>
              
              <div>
                <p class="text-xs text-neutral-500 mb-1">Superwizja</p>
                <p class="text-sm">dr hab. Anna Kowalska</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Space -->
    <section class="py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8 mb-16">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">PRZESTRZEŃ</p>
          </div>
          <div class="col-span-12 lg:col-span-8">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">
              Miejsce, które sprzyja wyciszeniu
            </h3>
            <p class="text-lg text-neutral-600">
              Gabinet znajduje się w spokojnej części Mokotowa, w zabytkowej kamienicy. 
              Przestrzeń została zaprojektowana tak, aby sprzyjała poczuciu bezpieczeństwa 
              i komfortu.
            </p>
          </div>
        </div>

        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-8">
            <img 
              src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=800&h=500&fit=crop"
              alt="Gabinet psychoterapeutyczny"
              class="w-full"
            />
          </div>
          <div class="col-span-12 lg:col-span-4">
            <div class="h-full flex flex-col justify-center">
              <div class="bg-neutral-50 p-8">
                <h4 class="font-medium mb-4">Lokalizacja</h4>
                <address class="not-italic text-sm text-neutral-600 space-y-2">
                  <p>ul. Mokotowska 27/3</p>
                  <p>00-560 Warszawa</p>
                  <p>Metro Politechnika (5 min)</p>
                </address>
                
                <div class="mt-6 pt-6 border-t border-neutral-200">
                  <p class="text-sm text-neutral-600">
                    Dogodny dojazd komunikacją miejską.<br/>
                    Możliwość parkowania w okolicy.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-24 px-8 bg-neutral-900 text-white">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-2">
            <p class="text-xs tracking-[0.2em] text-neutral-500">KONTAKT</p>
          </div>
          
          <div class="col-span-12 lg:col-span-5">
            <h3 class="font-serif text-4xl lg:text-5xl mb-8">
              Zróbmy pierwszy krok
            </h3>
            
