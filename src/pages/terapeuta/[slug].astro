---
// ŚCIEŻKA: src/pages/terapeuta/[slug].astro
import ThemeRenderer from '../../components/ThemeRenderer.astro';
import { getContent } from '../../lib/content';

export async function getStaticPaths() {
  // Lista wszystkich terapeutów - w przyszłości można to zautomatyzować
  const therapists = [
    'justyna-wrona',
    'ewelina-mastalerz', 
    'olga-puczynska',
    'anna-grabinska'
  ];
  
  return therapists.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const content = await getContent(`terapeuci/${slug}`);

if (!content) {
  return Astro.redirect('/404');
}
---

<ThemeRenderer content={content} />