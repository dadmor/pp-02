];

const services = [
  {
    id: "01",
    category: "TERAPIA INDYWIDUALNA",
    title: "Przestrzeń dla Ciebie",
    description: "Kiedy życie staje się zbyt ciężkie, aby nieść je w samotności.",
    quote: "„W samym sercu trudności leży możliwość.„",
    author: "— Albert Einstein",
    features: [
      "Lęk i ataki paniki",
      "Depresja i trauma", 
      "Kryzys egzystencjalny",
      "Relacje i przywiązanie"
    ],
