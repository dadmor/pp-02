// src/pages/index.astro
import '../../styles/global.css';

const navigation = [
  { href: "#philosophy", label: "Filozofia", labelEn: "Philosophy" },
  { href: "#services", label: "Praktyka", labelEn: "Practice" },
  { href: "#about", label: "O mnie", labelEn: "About" },
  { href: "#insights", label: "Refleksje", labelEn: "Insights" },
  { href: "#contact", label: "Kontakt", labelEn: "Contact" }
