      .font-japanese {
        font-family: 'Noto Sans JP', sans-serif;
      }

      /* Glitch effect */
      .glitch {
        position: relative;
      }
      
      .glitch::before,
      .glitch::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
      
      .glitch::before {
        animation: glitch-1 0.5s infinite;
        color: #00ffff;
        z-index: -1;
      }
      
      .glitch::after {
        animation: glitch-2 0.5s infinite;
        color: #ff00ff;
        z-index: -2;
      }
      
      @keyframes glitch-1 {
        0% {
          clip: rect(44px, 450px, 56px, 0);
          transform: translate(0);
        }
        5% {
          clip: rect(15px, 450px, 78px, 0);
          transform: translate(-2px, -1px);
        }
        10% {
          clip: rect(90px, 450px, 12px, 0);
          transform: translate(1px, 1px);
        }
        /* ... more keyframes */
        100% {
          clip: rect(44px, 450px, 56px, 0);
          transform: translate(0);
        }
      }
      
      @keyframes glitch-2 {
        0% {
          clip: rect(65px, 450px, 119px, 0);
          transform: translate(0);
        }
        5% {
          clip: rect(32px, 450px, 90px, 0);
          transform: translate(2px, 1px);
        }
        /* ... more keyframes */
        100% {
          clip: rect(65px, 450px, 119px, 0);
          transform: translate(0);
        }
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 4px;
      }
      
      ::-webkit-scrollbar-track {
        background: #000;
      }
      
      ::-webkit-scrollbar-thumb {
        background: #00ffff;
      }
    </style>

    <script>
      // Time display
      function updateTime() {
        const now = new Date();
        const time = now.toTimeString().split(' ')[0];
        document.getElementById('time').textContent = time;
      }
      setInterval(updateTime, 1000);
      updateTime();

      // Smooth scroll
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Terminal typing effect
      const terminal = document.querySelector('input[placeholder="Type \'START\' to begin..."]');
      if (terminal) {
        terminal.addEventListener('keypress', function(e) {
          if (e.key === 'Enter' && this.value.toUpperCase() === 'START') {
            window.location.href = '#section-04';
          }
        });
      }
    </script>
