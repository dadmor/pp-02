---
import BaseLayout from '@layouts/BaseLayout.astro';

const seo = {
  title: 'Strona nie znaleziona - 404 | Profesjonalna Psychoterapia',
  description: 'Przepraszamy, strona której szukasz nie istnieje.',
  noindex: true
};
---

<BaseLayout {...seo}>
  <section class="min-h-screen flex items-center justify-center px-6">
    <div class="text-center">
      <h1 class="text-9xl font-light text-gray-200 mb-4">404</h1>
      <h2 class="text-2xl font-serif mb-4">Strona nie znaleziona</h2>
      <p class="text-gray-600 mb-8">
        Przepraszamy, strona której szukasz nie istnieje lub została przeniesiona.
      </p>
      <nav class="flex gap-4 justify-center">
        <a href="/" class="bg-orange-700 text-white px-6 py-3 rounded-full hover:bg-orange-800 transition-colors">
          Strona główna
        </a>
        <a href="/terapeuci" class="bg-white text-gray-900 px-6 py-3 rounded-full border border-gray-200 hover:bg-gray-50 transition-colors">
          Znajdź terapeutę
        </a>
      </nav>
    </div>
  </section>
</BaseLayout>