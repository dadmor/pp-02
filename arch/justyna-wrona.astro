---
// src/pages/index.astro
import '../../styles/global.css';

const navigation = [
  { href: "#philosophy", label: "Philosophy" },
  { href: "#practice", label: "Practice" },
  { href: "#about", label: "About" },
  { href: "#contact", label: "Contact" }
];

const services = [
  {
    number: "01",
    title: "Individual Therapy",
    description: "A space for personal exploration and growth. Working with anxiety, depression, trauma, and life transitions.",
    details: "50 minutes / 200 PLN"
  },
  {
    number: "02", 
    title: "Couples Therapy",
    description: "Rebuilding connection and communication. For partners seeking deeper understanding and intimacy.",
    details: "80 minutes / 300 PLN"
  },
  {
    number: "03",
    title: "Group Work",
    description: "The healing power of shared experience. Mindfulness and therapeutic groups.",
    details: "2 hours / 80 PLN"
  }
];
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Maria Nowak — Psychotherapist</title>
    <meta name="description" content="Psychotherapy practice in Warsaw. Individual, couples, and group therapy.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,500;1,400&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white text-neutral-900 antialiased">
    
    <!-- Grid overlay for development -->
    <div class="fixed inset-0 pointer-events-none z-50 opacity-0 hover:opacity-10">
      <div class="h-full max-w-screen-xl mx-auto grid grid-cols-12 gap-6 px-6">
        {[...Array(12)].map(() => <div class="bg-red-500"></div>)}
      </div>
    </div>

    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-40 bg-white/95 backdrop-blur-sm">
      <div class="max-w-screen-xl mx-auto px-6 py-6">
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-3">
            <a href="/" class="text-sm tracking-widest">MARIA NOWAK</a>
          </div>
          <nav class="col-span-9 flex justify-end items-center gap-12">
            {navigation.map((item) => (
              <a 
                href={item.href} 
                class="text-sm tracking-wide hover:text-neutral-600 transition-colors"
              >
                {item.label}
              </a>
            ))}
          </nav>
        </div>
      </div>
    </header>

    <!-- Hero -->
    <section class="min-h-screen flex items-center px-6 pt-24">
      <div class="max-w-screen-xl mx-auto w-full">
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-12 md:col-span-10 md:col-start-2">
            <h1 class="font-serif text-6xl md:text-7xl lg:text-8xl leading-[0.9] mb-12">
              A space for<br />
              <em class="font-normal">understanding</em>
            </h1>
            <div class="grid grid-cols-12 gap-6">
              <p class="col-span-12 md:col-span-6 text-lg leading-relaxed text-neutral-700">
                I am a psychotherapist working in Warsaw. My practice focuses on creating 
                a safe environment where you can explore your inner world and find your 
                own path to healing.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Philosophy -->
    <section id="philosophy" class="py-32 px-6">
      <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-12 gap-6 mb-24">
          <div class="col-span-12 md:col-span-2">
            <p class="text-sm tracking-widest text-neutral-500">PHILOSOPHY</p>
          </div>
          <div class="col-span-12 md:col-span-8">
            <h2 class="font-serif text-4xl md:text-5xl leading-tight mb-8">
              Therapy is not about fixing what is broken, 
              but about uncovering what has always been whole.
            </h2>
            <div class="space-y-6 text-lg leading-relaxed text-neutral-700">
              <p>
                In my practice, I combine contemporary psychotherapy methods with 
                a deep respect for the wisdom each person carries within themselves. 
                I believe that true healing comes from understanding, not from judgment.
              </p>
              <p>
                My approach is rooted in cognitive-behavioral therapy, enriched with 
                elements of mindfulness and somatic experiencing. Each therapeutic 
                journey is unique, shaped by your needs and pace.
              </p>
            </div>
          </div>
        </div>

        <!-- Large quote -->
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-12 md:col-span-10 md:col-start-2 py-16 border-t border-b border-neutral-200">
            <blockquote class="font-serif text-3xl md:text-4xl leading-snug text-center">
              "The curious paradox is that when I accept myself just as I am, 
              then I can change."
            </blockquote>
            <p class="text-center mt-6 text-neutral-500">— Carl Rogers</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Practice -->
    <section id="practice" class="py-32 px-6 bg-neutral-50">
      <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-12 gap-6 mb-16">
          <div class="col-span-12 md:col-span-2">
            <p class="text-sm tracking-widest text-neutral-500">PRACTICE</p>
          </div>
          <div class="col-span-12 md:col-span-6">
            <h2 class="font-serif text-4xl md:text-5xl leading-tight">
              Forms of therapeutic work
            </h2>
          </div>
        </div>

        <div class="space-y-16">
          {services.map((service) => (
            <div class="grid grid-cols-12 gap-6 py-12 border-t border-neutral-300">
              <div class="col-span-12 md:col-span-1 text-2xl text-neutral-400">
                {service.number}
              </div>
              <div class="col-span-12 md:col-span-4">
                <h3 class="text-2xl mb-4">{service.title}</h3>
                <p class="text-neutral-600 leading-relaxed">{service.description}</p>
              </div>
              <div class="col-span-12 md:col-span-2 md:col-start-11 text-sm text-neutral-500">
                {service.details}
              </div>
            </div>
          ))}
        </div>

        <div class="grid grid-cols-12 gap-6 mt-24">
          <div class="col-span-12 md:col-span-6 md:col-start-4 text-center">
            <p class="text-neutral-600 mb-6">
              First consultation is free of charge. 
              All sessions can be conducted in Polish or English.
            </p>
            <a href="#contact" class="inline-block border border-neutral-900 px-12 py-4 text-sm tracking-widest hover:bg-neutral-900 hover:text-white transition-colors">
              BOOK A SESSION
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- About -->
    <section id="about" class="py-32 px-6">
      <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-12 md:col-span-2">
            <p class="text-sm tracking-widest text-neutral-500">ABOUT</p>
          </div>
          <div class="col-span-12 md:col-span-5">
            <h2 class="font-serif text-4xl md:text-5xl leading-tight mb-8">
              Maria Nowak
            </h2>
            <div class="space-y-6 text-lg leading-relaxed text-neutral-700">
              <p>
                I have been working as a psychotherapist for over fifteen years. 
                My journey began with studies in clinical psychology at the University 
                of Warsaw, followed by a four-year psychotherapy training in the 
                cognitive-behavioral approach.
              </p>
              <p>
                What drives my work is a deep curiosity about human nature and 
                a belief in each person's capacity for growth and transformation. 
                I continue to deepen my practice through regular supervision and 
                ongoing education.
              </p>
              <p>
                Beyond the therapy room, I find wisdom in literature, philosophy, 
                and long walks in nature. These passions remind me of the importance 
                of perspective and the healing power of beauty.
              </p>
            </div>
          </div>
          <div class="col-span-12 md:col-span-4 md:col-start-9">
            <img 
              src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=600&h=800&fit=crop&fm=jpg&q=80"
              alt="Maria Nowak"
              class="w-full grayscale"
            />
            <p class="text-sm text-neutral-500 mt-4">
              Photography: Anna Kowalska, 2024
            </p>
          </div>
        </div>

        <!-- Credentials -->
        <div class="grid grid-cols-12 gap-6 mt-24">
          <div class="col-span-12 md:col-span-8 md:col-start-3">
            <div class="grid grid-cols-3 gap-12 py-12 border-t border-neutral-200">
              <div>
                <p class="text-sm text-neutral-500 mb-2">Education</p>
                <p class="text-sm">University of Warsaw<br />Clinical Psychology</p>
              </div>
              <div>
                <p class="text-sm text-neutral-500 mb-2">Certification</p>
                <p class="text-sm">Polish Association<br />of Psychotherapy</p>
              </div>
              <div>
                <p class="text-sm text-neutral-500 mb-2">Specialization</p>
                <p class="text-sm">CBT, EMDR,<br />Mindfulness</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Office -->
    <section class="py-32 px-6 bg-neutral-50">
      <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-12 md:col-span-10 md:col-start-2">
            <img 
              src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=1200&h=600&fit=crop&fm=jpg&q=80"
              alt="Therapy office"
              class="w-full grayscale"
            />
            <div class="grid grid-cols-12 gap-6 mt-8">
              <div class="col-span-12 md:col-span-6">
                <p class="text-sm text-neutral-500 mb-4">THE SPACE</p>
                <p class="text-lg leading-relaxed">
                  The office is located in a quiet part of Warsaw's Mokotów district, 
                  easily accessible by public transport. The space was designed to 
                  provide comfort and privacy for our work together.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-32 px-6">
      <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-12 md:col-span-2">
            <p class="text-sm tracking-widest text-neutral-500">CONTACT</p>
          </div>
          <div class="col-span-12 md:col-span-8">
            <h2 class="font-serif text-4xl md:text-5xl leading-tight mb-16">
              Begin your journey
            </h2>
            
            <div class="grid grid-cols-12 gap-6">
              <div class="col-span-12 md:col-span-4">
                <p class="text-sm text-neutral-500 mb-2">Telephone</p>
                <p class="text-2xl mb-8">+48 123 456 789</p>
                
                <p class="text-sm text-neutral-500 mb-2">Email</p>
                <p class="text-lg mb-8">maria@nowak.pl</p>
              </div>
              
              <div class="col-span-12 md:col-span-4">
                <p class="text-sm text-neutral-500 mb-2">Office</p>
                <p class="text-lg mb-1">Mokotowska 27/3</p>
                <p class="text-lg mb-1">00-560 Warsaw</p>
                <p class="text-lg mb-8">Poland</p>
              </div>
              
              <div class="col-span-12 md:col-span-4">
                <p class="text-sm text-neutral-500 mb-2">Hours</p>
                <p class="text-lg mb-1">Monday — Friday</p>
                <p class="text-lg mb-1">9:00 — 19:00</p>
                <p class="text-lg">By appointment</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t border-neutral-200 px-6 py-12">
      <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-12 gap-6">
          <div class="col-span-12 md:col-span-6">
            <p class="text-sm text-neutral-500">
              © 2024 Maria Nowak. All rights reserved.
            </p>
          </div>
          <div class="col-span-12 md:col-span-6 text-right">
            <p class="text-sm text-neutral-500">
              Design inspired by timeless principles
            </p>
          </div>
        </div>
      </div>
    </footer>

    <style>
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        font-weight: 400;
        letter-spacing: -0.011em;
      }
      
      .font-serif {
        font-family: 'EB Garamond', 'Georgia', serif;
        font-weight: 400;
      }

      /* Golden ratio line height */
      p {
        line-height: 1.618;
      }

      /* Careful kerning for headers */
      h1, h2, h3 {
        letter-spacing: -0.02em;
      }

      /* Remove all unnecessary decorations */
      * {
        text-decoration: none;
      }

      /* Subtle selection */
      ::selection {
        background: #f5f5f5;
      }

      /* High quality image rendering */
      img {
        image-rendering: -webkit-optimize-contrast;
      }

      /* Classic grid guides (for development) */
      .grid > div {
        position: relative;
      }
    </style>

    <script>
      // Minimal interaction - only smooth scroll
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            const offset = 100;
            const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
            window.scrollTo({
              top: targetPosition,
              behavior: 'smooth'
            });
          }
        });
      });
    </script>
  </body>
</html>